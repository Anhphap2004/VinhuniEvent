@model VinhuniEvent.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-person-badge"></i> Thông tin người dùng</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">← Quay lại danh sách</a>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Mã sinh viên</dt>
                <dd class="col-sm-9">@Model.StudentCode</dd>

                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Khoa</dt>
                <dd class="col-sm-9">@Model.Faculty </dd>

                <dt class="col-sm-3">Ngành học</dt>
                <dd class="col-sm-9">@Model.Major </dd>

                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@Model.BirthDate?.ToString("dd/MM/yyyy") </dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.PhoneNumber </dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ngừng hoạt động</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">@Model.Role?.RoleName</dd>

                <dt class="col-sm-3">Ảnh đại diện</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="~/main/img/users/@Model.ImageUrl" alt="User image" class="img-thumbnail rounded-circle" style="width:120px;height:120px;object-fit:cover;">
                    }
                    else
                    {
                        <span class="text-muted">(Chưa có ảnh)</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Trở lại
            </a>
        </div>
    </div>
</div>
