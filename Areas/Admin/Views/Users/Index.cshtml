@model IEnumerable<VinhuniEvent.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // Lấy vai trò đang lọc (nếu có)
    string currentRole = Context.Request.Query["role"];
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-uppercase fw-bold text-dark mb-0">Quản lý người dùng</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Thêm mới người dùng
        </a>
    </div>

    <!-- Bộ lọc vai trò -->
    <div class="mb-3">
        <a asp-action="Index" asp-route-role=""
           class="btn btn-outline-dark @(string.IsNullOrEmpty(currentRole) ? "active" : "")">Tất cả</a>

        <a asp-action="Index" asp-route-role="Student"
           class="btn btn-outline-success @(currentRole == "Student" ? "active" : "")">Sinh viên</a>

        <a asp-action="Index" asp-route-role="Organizer"
           class="btn btn-outline-warning @(currentRole == "Organizer" ? "active" : "")">Ban tổ chức</a>

        <a asp-action="Index" asp-route-role="Admin"
           class="btn btn-outline-danger @(currentRole == "Admin" ? "active" : "")">Quản trị viên</a>
    </div>

    <!-- Search -->
    <div class="input-group mb-3" style="max-width: 400px;">
        <span class="input-group-text bg-light border-end-0">
            <i class="fa fa-search text-muted"></i>
        </span>
        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Tìm kiếm theo tên hoặc mã sinh viên...">
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center" id="userTable">
            <thead class="table-light">
                <tr>
                    @if (currentRole == "Admin")
                    {
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái</th>
                        <th>Vai trò</th>
                        <th>Hành động</th>
                    }
                    else
                    {
                        <th>Mã SV</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Khoa</th>
                        <th>Ngành</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    }
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (currentRole == "Admin")
                        {
                            <td class="fw-semibold text-start">@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@(item.PhoneNumber ?? "-")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="text-success fw-bold">✔</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">✖</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">@item.Role?.RoleName</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-secondary">
                                        <i class="fa fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-outline-primary">
                                        <i class="fa fa-eye"></i> Xem
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td>@(item.StudentCode ?? "-")</td>
                            <td class="fw-semibold text-start">@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@(item.Faculty ?? "-")</td>
                            <td>@(item.Major ?? "-")</td>
                            <td>
                                <span class="badge bg-info text-dark">@item.Role?.RoleName</span>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="text-success fw-bold">✔</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">✖</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-secondary">
                                        <i class="fa fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-outline-primary">
                                        <i class="fa fa-eye"></i> Xem
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section Scripts {
    <script>
        // 🔎 Tìm kiếm theo tên hoặc mã sinh viên
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll('#userTable tbody tr');

            rows.forEach(row => {
                var studentCode = row.cells[0].textContent.toLowerCase();
                var fullName = row.cells[1].textContent.toLowerCase();
                row.style.display = (studentCode.includes(searchValue) || fullName.includes(searchValue)) ? '' : 'none';
            });
        });
    </script>
}
