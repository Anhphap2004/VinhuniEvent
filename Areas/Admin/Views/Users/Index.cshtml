@model IEnumerable<VinhuniEvent.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-uppercase fw-bold text-dark mb-0">Quản lý người dùng</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Thêm mới
        </a>
    </div>

    <!-- Search -->
    <div class="input-group mb-3" style="max-width: 400px;">
        <span class="input-group-text bg-light border-end-0">
            <i class="fa fa-search text-muted"></i>
        </span>
        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Tìm kiếm theo tên hoặc mã sinh viên...">
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center" id="userTable">
            <thead class="table-light">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ tên</th>
                    <th>Ảnh</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Khoa</th>
                    <th>Ngành</th>
                    <th>Trạng thái</th>
                    <th>Vai trò</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.StudentCode ?? "-")</td>
                        <td class="fw-semibold text-start">@item.FullName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="~/main/img/users/@item.ImageUrl" alt="Ảnh đại diện" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            else
                            {
                                <span>-</span>
							}
                        <td>@item.Email</td>
                        <td>@(item.PhoneNumber ?? "-")</td>
                        <td>@(item.Faculty ?? "-")</td>
                        <td>@(item.Major ?? "-")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span>✔</span>
                            }
                            else
                            {
                                <span>❌</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">@item.Role?.RoleName</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-secondary">
                                    <i class="fa fa-edit">Sửa</i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-outline-primary">
                                    <i class="fa fa-eye">Chi tiết</i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger">
                                    <i class="fa fa-trash">Xóa</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll('#userTable tbody tr');

            rows.forEach(row => {
                var studentCode = row.cells[0].textContent.toLowerCase();
                var fullName = row.cells[1].textContent.toLowerCase();

                row.style.display = (studentCode.includes(searchValue) || fullName.includes(searchValue)) ? '' : 'none';
            });
        });
    </script>
}
