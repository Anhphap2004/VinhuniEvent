@model IEnumerable<VinhuniEvent.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string currentRole = Context.Request.Query["role"];
}

<style>
    .page-header {
        padding: 1.5rem 0;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #2a5298;
    }

    .page-title {
        color: #2a5298;
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 0.3rem 0;
    }

    .page-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin: 0;
    }

    .filter-btn {
        border: 1px solid #ddd;
        padding: 0.4rem 1rem;
        font-size: 0.9rem;
        margin-right: 0.5rem;
        color: #495057;
        background: white;
        text-decoration: none;
        display: inline-block;
    }

        .filter-btn:hover {
            background: #f8f9fa;
            color: #495057;
        }

        .filter-btn.active {
            background: #2a5298;
            color: white;
            border-color: #2a5298;
        }

    .search-input {
        border: 1px solid #ddd;
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
    }

        .search-input:focus {
            border-color: #2a5298;
            outline: none;
            box-shadow: none;
        }

    .btn-add {
        background: #28a745;
        color: white;
        border: none;
        padding: 0.5rem 1.2rem;
        font-size: 0.9rem;
    }

        .btn-add:hover {
            background: #218838;
            color: white;
        }

    .custom-table {
        margin: 0;
        border: 1px solid #dee2e6;
    }

        .custom-table thead th {
            background: #f8f9fa;
            color: #495057;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            padding: 0.75rem;
            border-bottom: 2px solid #dee2e6;
        }

        .custom-table tbody td {
            padding: 0.75rem;
            vertical-align: middle;
            font-size: 0.9rem;
        }

        .custom-table tbody tr:hover {
            background: #f8f9fa;
        }

    .badge-role {
        background: #e3f2fd;
        color: #1976d2;
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    .action-btn {
        padding: 0.3rem 0.6rem;
        font-size: 0.8rem;
        text-decoration: none;
        border: 1px solid;
        margin: 0 0.15rem;
    }

    .btn-edit {
        color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-edit:hover {
            background: #0d6efd;
            color: white;
        }

    .btn-view {
        color: #6c757d;
        border-color: #6c757d;
    }

        .btn-view:hover {
            background: #6c757d;
            color: white;
        }

    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
        }
</style>

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="page-title">Quản lý người dùng</h1>

                <p class="page-description">Quản lý thông tin người dùng, sinh viên, ban tổ chức và quản trị viên của hệ thống.</p>
            </div>
            <a asp-action="Create" class="btn btn-add">
                Thêm mới người dùng
            </a>
        </div>
    </div>

    <!-- Bộ lọc vai trò -->
    <div class="mb-3">
        <a asp-action="Index" asp-route-role=""
           class="filter-btn @(string.IsNullOrEmpty(currentRole) ? "active" : "")">Tất cả</a>

        <a asp-action="Index" asp-route-role="Student"
           class="filter-btn @(currentRole == "Student" ? "active" : "")">Sinh viên</a>

        <a asp-action="Index" asp-route-role="Organizer"
           class="filter-btn @(currentRole == "Organizer" ? "active" : "")">Ban tổ chức</a>

        <a asp-action="Index" asp-route-role="Admin"
           class="filter-btn @(currentRole == "Admin" ? "active" : "")">Quản trị viên</a>
    </div>

    <!-- Search -->
    <div class="mb-3" style="max-width: 400px;">
        <input type="text" id="searchInput" class="form-control search-input" placeholder="Tìm kiếm theo tên hoặc mã sinh viên...">
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table custom-table" id="userTable">
            <thead>
                <tr class="text-center">
                    @if (currentRole == "Admin")
                    {
                        <th>Email</th>
                        <th>Tên</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái</th>
                        <th>Vai trò</th>
                        <th>Hành động</th>
                    }
                    else
                    {
                        <th>Mã SV</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Khoa</th>
                        <th>Ngành</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    }
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (currentRole == "Admin")
                        {
                            <td>@item.Email</td>
                            <td class="fw-semibold text-start">@item.FullName</td>
                            <td>@(item.PhoneNumber ?? "-")</td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="text-success fw-bold">✔</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">✖</span>
                                }
                            </td>
                            <td>
                                <span class="badge-role">@item.Role?.Description</span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="action-btn btn-edit">
                                    Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="action-btn btn-view">
                                    Xem
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="action-btn btn-delete">
                                    Xóa
                                </a>
                            </td>
                        }
                        else
                        {
                            <td>@(item.StudentCode ?? "-")</td>
                            <td class="fw-semibold text-start">@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@(item.Faculty ?? "-")</td>
                            <td>@(item.Major ?? "-")</td>
                            <td>
                                <span class="badge-role">@item.Role?.Description</span>
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="text-success fw-bold">✔</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">✖</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="action-btn btn-edit">
                                    Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="action-btn btn-view">
                                    Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="action-btn btn-delete">
                                    Xóa
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll('#userTable tbody tr');

            rows.forEach(row => {
                var studentCode = row.cells[0].textContent.toLowerCase();
                var fullName = row.cells[1].textContent.toLowerCase();
                row.style.display = (studentCode.includes(searchValue) || fullName.includes(searchValue)) ? '' : 'none';
            });
        });
    </script>
}