@model VinhuniEvent.Models.User
@{
    ViewData["Title"] = "Xóa người dùng - sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Xác nhận xóa người dùng - sinh viên</h5>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Quay lại</a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning border-0 mb-4">
                <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa người dùng này không? Hành động này không thể hoàn tác.
            </div>

            <dl class="row">
                <dt class="col-sm-3 text-muted mb-3">Mã sinh viên</dt>
                <dd class="col-sm-9 mb-3">@Model.StudentCode  </dd>

                <dt class="col-sm-3 text-muted mb-3">Họ và tên</dt>
                <dd class="col-sm-9 mb-3">@Model.FullName</dd>

                <dt class="col-sm-3 text-muted mb-3">Email</dt>
                <dd class="col-sm-9 mb-3">@Model.Email</dd>

                <dt class="col-sm-3 text-muted mb-3">Khoa</dt>
                <dd class="col-sm-9 mb-3">@Model.Faculty  </dd>

                <dt class="col-sm-3 text-muted mb-3">Ngành học</dt>
                <dd class="col-sm-9 mb-3">@Model.Major  </dd>

                <dt class="col-sm-3 text-muted mb-3">Ngày sinh</dt>
                <dd class="col-sm-9 mb-3">@Model.BirthDate?.ToString("dd/MM/yyyy")  </dd>

                <dt class="col-sm-3 text-muted mb-3">Số điện thoại</dt>
                <dd class="col-sm-9 mb-3">@Model.PhoneNumber </dd>

                <dt class="col-sm-3 text-muted mb-3">Trạng thái</dt>
                <dd class="col-sm-9 mb-3">
                    @if (Model.IsActive == true)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </dd>

                <dt class="col-sm-3 text-muted mb-3">Ngày tạo</dt>
                <dd class="col-sm-9 mb-3">@Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm") </dd>

                <dt class="col-sm-3 text-muted mb-3">Vai trò</dt>
                <dd class="col-sm-9 mb-3">@Model.Role?.RoleName </dd>

                <dt class="col-sm-3 text-muted mb-3">Ảnh đại diện</dt>
                <dd class="col-sm-9 mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Ảnh đại diện" class="img-thumbnail" style="width:80px;height:80px;object-fit:cover;">
                    }
                    else
                    {
                        <span class="text-muted">(Chưa có ảnh)</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-white border-top">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="UserId" />
                    <button type="submit" class="btn btn-danger">Xóa người dùng</button>
                </form>
            </div>
        </div>
    </div>
</div>