@model IEnumerable<VinhuniEvent.Models.Role>

@{
    ViewData["Title"] = "Danh sách quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Danh sách quyền</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-center" style="width: 180px;">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleName</td>
                            <td>@item.Description</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.RoleId"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.RoleId"
                                   class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-info-circle"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoleId"
                                   class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Xoá
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
