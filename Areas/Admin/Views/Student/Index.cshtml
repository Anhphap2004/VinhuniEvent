@model IEnumerable<VinhuniEvent.Models.User>

@{
    ViewData["Title"] = "Quản lý sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="page-header">
        <h5 style="margin: 0; font-size: 18px; font-weight: 600; color: #1a1a1a; text-transform: uppercase;">Quản lý sinh viên</h5>
    </div>

    <!-- Search & Add Button -->
    <div class="toolbar">
        <input type="text"
               id="searchInput"
               class="search-input"
               placeholder="Tìm kiếm theo mã SV, họ tên, email...">
        <a asp-action="Create" class="btn-add">Thêm mới</a>
    </div>

    <!-- Table -->
    <div class="table-container">
        <table class="data-table" id="studentTable">
            <thead>
                <tr>
                    <th>Mã SV</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Số Điện Thoại</th>
                    <th>Khoa</th>
                    <th>Ngành</th>
                    <th>Trạng thái</th>
                    <th>Vai trò</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.StudentCode ?? "-")</td>
                        <td class="title-col">@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@(item.PhoneNumber ?? "-")</td>
                        <td>@(item.Faculty ?? "-")</td>
                        <td>@(item.Major ?? "-")</td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="status-badge status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-badge status-inactive">Khóa</span>
                            }
                        </td>
                        <td>
                            <span class="status-badge status-role">
                                @item.Role?.RoleName
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.UserId" class="btn-action">Sửa</a>
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@item.UserId" class="btn-action">Xem</a>
                                <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.UserId" class="btn-action btn-delete">Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var table = document.getElementById('studentTable');
            var rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            for (var i = 0; i < rows.length; i++) {
                var studentCode = rows[i].cells[0].textContent.toLowerCase();
                var fullName = rows[i].cells[1].textContent.toLowerCase();
                var email = rows[i].cells[2].textContent.toLowerCase();

                if (studentCode.indexOf(searchValue) > -1 ||
                    fullName.indexOf(searchValue) > -1 ||
                    email.indexOf(searchValue) > -1) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        });
    </script>

    <style>
        .content-wrapper {
            padding: 24px;
            max-width: 100%;
        }

        .page-header {
            margin-bottom: 20px;
        }

            .page-header h5 {
                margin: 0;
                font-size: 18px;
                font-weight: 600;
                color: #1a1a1a;
            }

        .toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
            gap: 12px;
        }

        .search-input {
            flex: 1;
            max-width: 400px;
            padding: 7px 12px;
            border: 1px solid #ddd;
            font-size: 14px;
            color: #333;
        }

            .search-input:focus {
                outline: none;
                border-color: #007bff;
            }

        .btn-add {
            padding: 7px 18px;
            background: #007bff;
            color: #fff;
            border: none;
            font-size: 14px;
            text-decoration: none;
            white-space: nowrap;
            cursor: pointer;
            transition: background 0.2s;
        }

            .btn-add:hover {
                background: #0056b3;
                color: #fff;
            }

        .table-container {
            background: #fff;
            border: 1px solid #ddd;
            overflow-x: auto;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

            .data-table thead {
                background: #f8f9fa;
                border-bottom: 2px solid #ddd;
            }

            .data-table th {
                padding: 10px 12px;
                text-align: left;
                font-weight: 600;
                color: #1a1a1a;
                white-space: nowrap;
            }

            .data-table td {
                padding: 8px 12px;
                color: #333;
                border-bottom: 1px solid #e9ecef;
            }

            .data-table tbody tr:hover {
                background: #f8f9fa;
            }

        .title-col {
            font-weight: 500;
            color: #1a1a1a;
        }

        .text-muted {
            color: #999;
            font-size: 13px;
        }

        .status-badge {
            display: inline-block;
            padding: 3px 8px;
            font-size: 12px;
            white-space: nowrap;
        }

        .status-active {
            background: #d4edda;
            color: #155724;
        }

        .status-inactive {
            background: #e2e3e5;
            color: #383d41;
        }

        .status-role {
            background: #d1ecf1;
            color: #0c5460;
        }

        .action-buttons {
            display: flex;
            gap: 6px;
            white-space: nowrap;
        }

        .btn-action {
            padding: 4px 10px;
            font-size: 13px;
            border: 1px solid #6c757d;
            background: #fff;
            color: #6c757d;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s;
        }

            .btn-action:hover {
                background: #6c757d;
                color: #fff;
            }

        .btn-delete {
            border-color: #dc3545;
            color: #dc3545;
        }

            .btn-delete:hover {
                background: #dc3545;
                color: #fff;
            }

        /* Responsive */
        @@media (max-width: 1400px) {
            .content-wrapper {
                padding: 20px;
            }

            .data-table {
                font-size: 13px;
            }

                .data-table th,
                .data-table td {
                    padding: 8px 10px;
                }
        }
    </style>
}