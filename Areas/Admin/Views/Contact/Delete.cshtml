@model VinhuniEvent.Models.Contact

@{
    ViewData["Title"] = "Xoá liên hệ";
}

<div class="page-wrapper">
    <div class="container-xl">
        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title text-danger">
                        <i class="ti ti-alert-triangle" style="font-size: 24px; margin-right: 8px;"></i>
                        Xác Nhận Xoá Liên Hệ
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h3 class="card-title">Cảnh báo: Hành động này không thể hoàn tác</h3>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-danger">
                                <i class="ti ti-alert-circle" style="margin-right: 8px;"></i>
                                <strong>Lưu ý:</strong> Bạn sắp xoá vĩnh viễn liên hệ này. Hành động này không thể hoàn
                                tác.
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Thông tin liên hệ cần xoá:</label>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="mb-2">
                                            <strong>Người gửi:</strong>
                                            <p class="mb-0">@Model.User?.FullName</p>
                                        </div>
                                        <div class="mb-2">
                                            <strong>Tiêu đề:</strong>
                                            <p class="mb-0">@Model.Subject</p>
                                        </div>
                                        <div class="mb-2">
                                            <strong>Email:</strong>
                                            <p class="mb-0">@Model.User?.Email</p>
                                        </div>
                                        <div>
                                            <strong>Nội dung:</strong>
                                            <div class="border rounded p-2 mt-2 bg-white"
                                                style="white-space: pre-wrap; max-height: 200px; overflow-y: auto;">
                                                @Model.Message
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="ContactId" />

                                <div class="form-footer">
                                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-between">
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="ti ti-arrow-left" style="margin-right: 6px;"></i>
                                            Huỷ bỏ
                                        </a>

                                        <button type="submit" class="btn btn-danger">
                                            <i class="ti ti-trash" style="margin-right: 6px;"></i>
                                            Xoá vĩnh viễn
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>