@model VinhuniEvent.Models.EventCategory

@{
    ViewData["Title"] = "Xóa danh mục sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-trash3"></i> Xác nhận xóa danh mục</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Trở lại
            </a>
        </div>

        <div class="card-body">
            <p class="text-muted mb-4">Bạn có chắc chắn muốn xóa danh mục sự kiện này không?</p>
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold">Tên danh mục:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

                <dt class="col-sm-3 fw-semibold">Mô tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 fw-semibold">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive  == true)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngưng</span>
                    }
                </dd>
            </dl>
                                                    
            <form asp-action="Delete">
                <input type="hidden" asp-for="CategoryId" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
