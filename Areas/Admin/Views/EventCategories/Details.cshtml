@model VinhuniEvent.Models.EventCategory

@{
    ViewData["Title"] = "Chi tiết danh mục sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Chi tiết danh mục sự kiện</h5>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold text-secondary">Tên danh mục</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive == true)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngưng</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-outline-primary me-2">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
