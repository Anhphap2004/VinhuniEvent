@model IEnumerable<VinhuniEvent.Models.EventCategory>

@{
    ViewData["Title"] = "Danh mục sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh mục sự kiện</h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th style="width: 25%;">Tên danh mục</th>
                            <th style="width: 40%;">Mô tả</th>
                            <th style="width: 15%;">Trạng thái</th>
                            <th style="width: 20%;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    @if (item.IsActive == true)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngưng</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square">Sửa</i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-info me-1">
                                        <i class="bi bi-eye">Chi Tiết</i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash">Xoá</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
