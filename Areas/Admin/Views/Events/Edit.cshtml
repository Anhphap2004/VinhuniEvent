@model VinhuniEvent.Models.Event

@{
    ViewData["Title"] = "Chỉnh sửa sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa sự kiện
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="EventId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label fw-semibold">Danh mục</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CreatedBy" class="form-label fw-semibold">Người tạo</label>
                        <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedBy"></select>
                        <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-semibold">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề sự kiện..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label fw-semibold">Địa điểm</label>
                        <input asp-for="Location" class="form-control" placeholder="Nhập địa điểm tổ chức..." />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn gọn về sự kiện..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StartTime" class="form-label fw-semibold">Thời gian bắt đầu</label>
                        <input asp-for="StartTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EndTime" class="form-label fw-semibold">Thời gian kết thúc</label>
                        <input asp-for="EndTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MaxParticipants" class="form-label fw-semibold">Số người tối đa</label>
                        <input asp-for="MaxParticipants" class="form-control" type="number" />
                        <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="CreatedDate" class="form-label fw-semibold">Ngày tạo</label>
                        <input asp-for="CreatedDate" class="form-control" type="date" readonly />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="IsActive" class="form-label fw-semibold">Trạng thái</label>
                        <select asp-for="IsActive" class="form-select">
                            <option value="true" selected>Hoạt động</option>
                            <option value="false">Không hoạt động</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>


                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="ImageFile" class="form-label fw-semibold">Ảnh sự kiện</label>
                                <input asp-for="ImageFile" type="file" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <label class="form-label fw-semibold d-block">Ảnh hiện tại</label>
                                    <img src="~/main/img/events/@Model.Image" class="rounded border" width="150" height="120" style="object-fit:cover;" alt="Event image" />
                                }
                                else
                                {
                                    <label class="form-label d-block text-muted">Chưa có ảnh</label>
                                }
                            </div>
                        </div>

                 

                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                        <i class="bi bi-x-circle me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
