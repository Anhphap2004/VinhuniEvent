@model VinhuniEvent.Models.Event

@{
    ViewData["Title"] = "Tạo sự kiện mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">🎉 Tạo sự kiện mới</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Chọn danh mục --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề sự kiện..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn gọn sự kiện..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label">Địa điểm</label>
                <input asp-for="Location" class="form-control" placeholder="Ví dụ: Hội trường A - Đại học Vinh" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartTime" class="control-label">Bắt đầu</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndTime" class="control-label">Kết thúc</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CreatedBy" class="control-label">Người tạo</label>
                <select asp-for="CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy">
                    <option value="">-- Chọn người tạo --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaxParticipants" class="control-label">Số người tối đa</label>
                <input asp-for="MaxParticipants" class="form-control" placeholder="Ví dụ: 100" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="control-label">Ảnh sự kiện</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <img id="preview" src="#" alt="Xem trước ảnh" style="display:none; margin-top:10px; max-height:200px;" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Tạo sự kiện" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            var input = event.target;
            var reader = new FileReader();

            reader.onload = function () {
                var img = document.getElementById('preview');
                img.src = reader.result;
                img.style.display = 'block';
            }

            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
