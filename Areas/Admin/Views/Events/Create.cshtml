@model VinhuniEvent.Models.Event

@{
    ViewData["Title"] = "Tạo sự kiện mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-plus-circle me-2"></i> Tạo sự kiện mới
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label fw-semibold">Danh mục</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CreatedBy" class="form-label fw-semibold">Người tạo</label>
                    <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedBy">
                        <option value="">-- Chọn người tạo --</option>
                    </select>
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Title" class="form-label fw-semibold">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề sự kiện..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Location" class="form-label fw-semibold">Địa điểm</label>
                    <input asp-for="Location" class="form-control" placeholder="Ví dụ: Hội trường A - Đại học Vinh" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="Description" id="summernote" class="form-control" rows="3" placeholder="Mô tả ngắn gọn sự kiện..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="StartTime" class="form-label fw-semibold">Bắt đầu</label>
                    <input asp-for="StartTime" type="datetime-local" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EndTime" class="form-label fw-semibold">Kết thúc</label>
                    <input asp-for="EndTime" type="datetime-local" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MaxParticipants" class="form-label fw-semibold">Số người tối đa</label>
                    <input asp-for="MaxParticipants" class="form-control" placeholder="Ví dụ: 100" />
                    <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ImageFile" class="form-label fw-semibold">Ảnh sự kiện</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>

                    <div class="mt-3 text-center">
                        <img id="preview" src="~/main/img/default-placeholder.png" alt="Xem trước ảnh"
                             class="rounded border shadow-sm"
                             style="display:block; margin:auto; max-width:200px; max-height:150px; object-fit:cover;" />
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i> Tạo sự kiện
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                        <i class="bi bi-x-circle me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote.min.js"></script> *@
    @* <script>
        $(document).ready(function() {
            $('#summernote').summernote();
        });
    </script> *@
    <script>
        // Hiển thị ảnh preview khi chọn file
        function previewImage(event) {
            const input = event.target;
            const reader = new FileReader();

            reader.onload = function () {
                const img = document.getElementById('preview');
                img.src = reader.result;
                img.style.display = 'block';
            }

            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

}
