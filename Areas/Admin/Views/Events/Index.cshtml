@model IEnumerable<VinhuniEvent.Models.Event>

@{
    ViewData["Title"] = "Quản lý sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="page-header">
        <h4>📅 Quản lý sự kiện</h4>
    </div>

    <!-- Toolbar -->
    <div class="toolbar">
        <input type="text" id="searchInput" class="search-input" placeholder="🔍 Tìm kiếm theo tiêu đề hoặc địa điểm...">
        <a asp-action="Create" class="btn-add">+ Thêm mới</a>
    </div>

    <!-- Table -->
    <div class="table-container">
        <table class="data-table" id="eventTable">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Mô tả</th>
                    <th>Địa điểm</th>
                    <th>Bắt đầu</th>
                    <th>Kết thúc</th>
                    <th>Giới hạn</th>
                    <th>Ảnh</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th>Danh mục</th>
                    <th>Người tạo</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="title-col">@item.Title</td>
                        <td class="desc-col">@item.Description</td>
                        <td>@item.Location</td>
                        <td>@item.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.EndTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.MaxParticipants</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="~/main/img/events/@item.Image" alt="@item.Title" class="event-img" />
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="status-badge status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-badge status-inactive">Ẩn</span>
                            }
                        </td>
                        <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.Category?.CategoryName</td>
                        <td>@item.CreatedByNavigation?.FullName</td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.EventId" class="btn-action edit">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.EventId" class="btn-action view">Xem</a>
                                <a asp-action="Delete" asp-route-id="@item.EventId" class="btn-action delete">Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function () {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll('#eventTable tbody tr');

            rows.forEach(row => {
                var title = row.cells[0].textContent.toLowerCase();
                var location = row.cells[2].textContent.toLowerCase();
                row.style.display = (title.includes(searchValue) || location.includes(searchValue)) ? '' : 'none';
            });
        });
    </script>

    <style>
        .content-wrapper {
            padding: 32px;
            background: #f5f6fa;
            border-radius: 10px;
        }

        .page-header {
            margin-bottom: 24px;
            text-align: center;
        }

            .page-header h4 {
                margin: 0;
                font-size: 22px;
                font-weight: 700;
                color: #222;
                letter-spacing: 0.5px;
            }

        .toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 18px;
            gap: 12px;
        }

        .search-input {
            flex: 1;
            max-width: 420px;
            padding: 10px 14px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
        }

            .search-input:focus {
                border-color: #007bff;
                box-shadow: 0 0 4px rgba(0, 123, 255, 0.3);
                outline: none;
            }

        .btn-add {
            padding: 9px 18px;
            background: #007bff;
            border-radius: 8px;
            color: #fff;
            font-size: 14px;
            text-decoration: none;
            font-weight: 500;
            transition: 0.3s;
        }

            .btn-add:hover {
                background: #0056b3;
            }

        .table-container {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            overflow-x: auto;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

            .data-table thead {
                background: #f1f3f6;
            }

            .data-table th {
                padding: 12px 14px;
                text-align: left;
                font-weight: 600;
                color: #222;
                border-bottom: 2px solid #dee2e6;
                white-space: nowrap;
            }

            .data-table td {
                padding: 10px 14px;
                border-bottom: 1px solid #f0f0f0;
                color: #333;
                vertical-align: middle;
            }

            .data-table tbody tr:hover {
                background: #f9fbfd;
            }

        .title-col {
            font-weight: 500;
            color: #111;
            max-width: 180px;
        }

        .desc-col {
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .event-img {
            width: 55px;
            height: 45px;
            border-radius: 6px;
            object-fit: cover;
            border: 1px solid #ddd;
        }

        .text-muted {
            color: #aaa;
        }

        .status-badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }

        .status-active {
            background: #d4edda;
            color: #155724;
        }

        .status-inactive {
            background: #f8d7da;
            color: #721c24;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 6px;
        }

        .btn-action {
            padding: 5px 10px;
            font-size: 13px;
            border-radius: 6px;
            text-decoration: none;
            border: 1px solid transparent;
            transition: all 0.2s;
        }

            .btn-action.edit {
                background: #eaf4ff;
                color: #007bff;
                border-color: #007bff;
            }

            .btn-action.view {
                background: #fffbea;
                color: #ffc107;
                border-color: #ffc107;
            }

            .btn-action.delete {
                background: #fdeaea;
                color: #dc3545;
                border-color: #dc3545;
            }

            .btn-action:hover {
                opacity: 0.85;
                transform: scale(1.02);
            }

        .text-center {
            text-align: center;
        }

        /* Responsive */
        @@media (max-width: 1200px) {
            .data-table th,
            .data-table td {
                padding: 8px 10px;
            }

            .search-input {
                max-width: 100%;
            }
        }
    </style>
}
