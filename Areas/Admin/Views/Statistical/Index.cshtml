@model VinhuniEvent.ViewModels.ThongKeViewModel
@{
    ViewData["Title"] = "Thống kê tổng quan";
}

<div class="container mt-5">

    <h2 class="fw-bolder mb-5 border-bottom pb-2 text-primary">
        <i class="fas fa-chart-bar me-2"></i> Thống Kê Tổng Quan Hệ Thống
    </h2>

    <h4 class="mb-3 text-secondary">Chỉ số Sự kiện & Tham gia</h4>
    <div class="row g-4 mb-5">

        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="card bg-primary text-white shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="mb-0 fs-6 fw-light">Tổng sự kiện</p>
                            <h2 class="fw-bolder display-6">@Model.TotalEvents</h2>
                        </div>
                        <i class="fas fa-calendar-alt fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="card bg-success text-white shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="mb-0 fs-6 fw-light">Tổng lượt Đăng ký</p>
                            <h2 class="fw-bolder display-6">@Model.TotalRegistrations</h2>
                        </div>
                        <i class="fas fa-user-check fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="card bg-info text-white shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="mb-0 fs-6 fw-light">Tổng người dùng</p>
                            <h2 class="fw-bolder display-6">@Model.TotalUsers</h2>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="card border-warning text-white bg-danger shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="mb-0 fs-6 fw-light text-white">SV đã Check-in</p>
                            <h2 class="fw-bolder display-6">@Model.TotalCheckIn</h2>
                        </div>
                        <i class="fas fa-door-open fa-3x text-warning opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row g-4 mb-5">

        <div class="col-lg-6">
            <h4 class="mb-3 text-secondary">Phân loại Người dùng</h4>
            <div class="row g-3">

                <div class="col-md-4">
                    <div class="card shadow-sm p-3 text-center border-danger">
                        <h6 class="text-danger mb-1">Admin</h6>
                        <h3 class="fw-bold">@Model.TotalAdmins</h3>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm p-3 text-center border-primary">
                        <h6 class="text-primary mb-1">Sinh viên</h6>
                        <h3 class="fw-bold">@Model.TotalStudents</h3>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm p-3 text-center border-success">
                        <h6 class="text-success mb-1">Nhà tổ chức</h6>
                        <h3 class="fw-bold">@Model.TotalOrganizers</h3>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card shadow-sm p-3 text-center border-primary bg-light">
                        <h6 class="text-danger mb-1">Sinh Viên Vắng Mặt</h6>
                        <h3 class="fw-bold">@Model.TotalAbsent</h3>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-6">
            <h4 class="mb-3 text-secondary">Tình trạng Sự kiện</h4>
            <div class="row g-3 h-30">

                <div class="col-md-6">
                    <div class="card shadow-sm p-3 text-center bg-info text-white h-100">
                        <h6 class="mb-1">Sự Kiện Sắp diễn ra</h6>
                        <h2 class="fw-bold">@Model.UpcomingEvents</h2>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card shadow-sm p-3 text-center bg-danger text-white h-100">
                        <h6 class="mb-1">Sự Kiện Đang diễn ra</h6>
                        <h2 class="fw-bold">@Model.OngoingEvents</h2>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="mt-5">
        <h3 class="fw-bold text-dark">
            <i class="fas fa-trophy me-2 text-warning"></i> Top 5 sự kiện có nhiều đăng ký nhất
        </h3>

        <div class="table-responsive">
            <table class="table table-striped table-hover mt-3 shadow-sm border">
                <thead class="bg-dark text-white">
                    <tr>
                        <th style="width: 10%;">#</th>
                        <th>Tên sự kiện</th>
                        <th style="width: 20%;" class="text-center">Lượt đăng ký</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.TopEvents.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.TopEvents[i].EventName</td>
                            <td class="fw-bold text-center text-primary">@Model.TopEvents[i].RegistrationCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-5 mb-5">
        <h3 class="fw-bold text-dark">
            <i class="fas fa-plus-circle me-2 text-success"></i> 5 sự kiện mới nhất
        </h3>

        <div class="table-responsive">
            <table class="table table-bordered table-striped mt-3 shadow-sm">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th>Tên sự kiện</th>
                        <th style="width: 25%;">Bắt đầu</th>
                        <th style="width: 25%;">Kết thúc</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ev in Model.LatestEvents)
                    {
                        <tr>
                            <td>@ev.Title</td>
                            <td>@ev.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@ev.EndTime.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>