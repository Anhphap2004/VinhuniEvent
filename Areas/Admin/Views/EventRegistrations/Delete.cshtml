@model VinhuniEvent.Models.EventRegistration

@{
    ViewData["Title"] = "Xóa đăng ký sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper p-4">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-danger text-white text-center fw-bold fs-5">
            <i class="fa-solid fa-triangle-exclamation me-2"></i> Xác nhận xóa đăng ký
        </div>

        <div class="card-body">
            <p class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn <strong class="text-danger">xóa</strong> đăng ký này không?<br />
                Hành động này không thể hoàn tác!
            </p>

            <dl class="row border rounded p-3 bg-light">
                <dt class="col-sm-4 text-end fw-semibold">Sự kiện:</dt>
                <dd class="col-sm-8">@Model.Event?.Title</dd>

                <dt class="col-sm-4 text-end fw-semibold">Người đăng ký:</dt>
                <dd class="col-sm-8">@Model.User?.FullName (@Model.User?.StudentCode)</dd>

                <dt class="col-sm-4 text-end fw-semibold">Ngày đăng ký:</dt>
                <dd class="col-sm-8">@Model.RegistrationDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 text-end fw-semibold">Trạng thái:</dt>
                <dd class="col-sm-8">
                    <span class="badge rounded-pill px-3 py-2 fw-semibold @(
                          Model.Status == "Đã Đăng Ký" ? "bg-success" :
                          Model.Status == "Chờ Duyệt" ? "bg-warning text-dark" :
                          "bg-secondary"
                                              )">
                        @Model.Status
                    </span>
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="text-center mt-4">
                <input type="hidden" asp-for="RegistrationId" />

                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="fa-solid fa-trash-can me-1"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 14px;
    }

    dl.row dt {
        color: #2b2b2b;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
    }
</style>
