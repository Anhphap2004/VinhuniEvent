@{
    ViewData["Title"] = "Đăng ký tài khoản";
}
@model VinhuniEvent.Models.User

<style>
    /* BẮT ĐẦU: Style dùng chung từ trang Login */
    .login-container {
        margin: 80px auto;
        margin-top: 140px; /* Căn chỉnh lại một chút cho form dài */
        background: linear-gradient(180deg, #1B5E96 0%, #174A7A 100%);
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        width: 100%;
        padding: 40px;
        /* Thay đổi độ rộng riêng cho trang Register để chứa 2 cột */
        max-width: 800px;
    }

    .logo-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .logo-wrapper {
        display: inline-flex;
        align-items: center;
        gap: 20px;
    }

    .logo {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .university-info {
        text-align: left;
    }

    .university-name {
        color: white;
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 5px;
        letter-spacing: 0.5px;
    }

    .university-subtitle {
        color: #E8F1F8;
        font-size: 12px;
        font-weight: 400;
        letter-spacing: 0.3px;
    }

    .form-label {
        color: white;
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        display: block; /* Đảm bảo label nằm trên input */
    }

    /* Style cho Input và Select giống hệt Login */
    .form-control {
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 6px;
        color: white;
        padding: 10px 15px;
        font-size: 15px;
        width: 100%;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.5);
            box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
            color: white;
            outline: none;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

    /* Xử lý riêng cho Dropdown Select để option không bị trắng/khó nhìn */
    select.form-control option {
        background-color: #174A7A; /* Màu nền tối giống theme */
        color: white;
        padding: 10px;
    }

    .btn-register {
        background: linear-gradient(135deg, #4A9ACF 0%, #2E75B6 100%);
        border: none;
        border-radius: 6px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        padding: 14px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 20px;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            background: linear-gradient(135deg, #5FA8D3 0%, #3984C5 100%);
        }

    .login-link {
        text-align: center;
        margin-top: 20px;
        color: rgba(255, 255, 255, 0.8);
        font-size: 14px;
    }

        .login-link a {
            color: white;
            text-decoration: underline;
            font-weight: 600;
        }

    /* Grid system đơn giản cho 2 cột */
    .row-custom {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -10px; /* Âm margin để cân bằng padding */
    }

    .col-custom {
        flex: 50%;
        padding: 0 10px;
        margin-bottom: 20px;
    }

    .col-full {
        flex: 100%;
        padding: 0 10px;
        margin-bottom: 20px;
    }

    .form-check-label {
        color: white;
        font-size: 14px;
        cursor: pointer;
    }

    .form-check-input {
        cursor: pointer;
    }

    /* Responsive cho mobile */
    @@media (max-width: 768px) {
        .login-container {
            padding: 30px 20px;
            margin-top: 60px;
        }

        .col-custom {
            flex: 100%; /* Xuống dòng trên mobile */
        }

        .logo-wrapper {
            flex-direction: column;
            gap: 10px;
        }

        .university-info {
            text-align: center;
        }
    }
</style>

<div style="background-image: url(/main/img/bg-login.jpg); min-height: 100vh; display: flex; align-items: flex-start; justify-content: center;" class="container-fluid">

    <div class="login-container">
        <div class="logo-section">
            <div class="logo-wrapper">
                <div class="logo">
                    <img src="~/main/img/logo-dh-vinh.png" alt="Logo Vinh Uni">
                </div>
                <div class="university-info">
                    <div class="university-name">TRƯỜNG ĐẠI HỌC VINH</div>
                    <div class="university-subtitle">HỆ THỐNG ĐĂNG KÝ TÀI KHOẢN SINH VIÊN</div>
                </div>
            </div>
        </div>

        <form id="registerForm" asp-controller="Register" asp-action="Index" method="post">
            @Html.AntiForgeryToken()

            <div class="row-custom">
                <div class="col-full">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ" required />
                    <span asp-validation-for="FullName" class="text-warning small"></span>
                </div>
            </div>

            <div class="row-custom">
                <div class="col-custom">
                    <label class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="example@vinhuni.edu.vn" required />
                    <span asp-validation-for="Email" class="text-warning small"></span>
                </div>
                <div class="col-custom">
                    <label class="form-label">Mã sinh viên</label>
                    <input type="text" asp-for="StudentCode" class="form-control" placeholder="Ví dụ: 205D..." required />
                    <span asp-validation-for="StudentCode" class="text-warning small"></span>
                </div>
            </div>

            <div class="row-custom">
                <div class="col-full">
                    <label class="form-label">Mật khẩu</label>
                    <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Nhập mật khẩu bảo mật" required />
                    <span asp-validation-for="PasswordHash" class="text-warning small"></span>
                </div>
            </div>

            <div class="row-custom">
                <div class="col-custom">
                    <label class="form-label">Ngành học</label>
                    <select asp-for="Major" class="form-control" required>
                        <option value="" disabled selected>-- Chọn ngành học --</option>
                        <option value="Quản lý giáo dục">1. Quản lý giáo dục</option>
                        <option value="Giáo dục Mầm non">2. Giáo dục Mầm non</option>
                        <option value="Công nghệ thông tin">42. Công nghệ thông tin</option>
                        <option value="Sư phạm Toán học">7. Sư phạm Toán học</option>
                        <option value="Sư phạm Tiếng Anh">16. Sư phạm Tiếng Anh</option>
                        <option value="Kinh tế số">24. Kinh tế số</option>
                        <option value="Luật kinh tế">39. Luật kinh tế</option>
                        <option value="Công nghệ thông tin (Chuyên ngành Trí tuệ nhân tạo)">43. Công nghệ thông tin (AI)</option>
                        <option value="Kỹ thuật xây dựng">53. Kỹ thuật Xây dựng</option>
                    </select>
                </div>
                <div class="col-custom">
                    <label class="form-label">Khóa học</label>
                    <select asp-for="Faculty" class="form-control" required>
                        <option value="" disabled selected>-- Chọn khóa --</option>
                        <option value="k62">Khóa 62</option>
                        <option value="k63">Khóa 63</option>
                        <option value="k64">Khóa 64</option>
                        <option value="k65">Khóa 65</option>
                        <option value="k66">Khóa 66</option>
                    </select>
                </div>
            </div>

            <div class="row-custom">
                <div class="col-custom">
                    <label class="form-label">Ngày sinh</label>
                    <input asp-for="BirthDate" type="date" class="form-control" required />
                </div>
                <div class="col-custom">
                    <label class="form-label">Số điện thoại</label>
                    <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxxx" required />
                    <span asp-validation-for="PhoneNumber" class="text-warning small"></span>
                </div>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="agree" required />
                <label class="form-check-label" for="agree">
                    Tôi cam kết thông tin khai báo là chính xác
                </label>
            </div>

            <button type="submit" class="btn-register">ĐĂNG KÝ TÀI KHOẢN</button>

            <div class="login-link">
                Bạn đã có tài khoản? <a asp-controller="Login" asp-action="Index">Đăng nhập ngay</a>
            </div>
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>