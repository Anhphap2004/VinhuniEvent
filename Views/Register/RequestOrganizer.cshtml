@model VinhuniEvent.Models.RoleRequest
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Đăng ký làm Ban Tổ Chức";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy UserId từ session để hiển thị (nếu cần) hoặc dùng trong logic hiển thị
    var userIdSession = Context.Session.GetInt32("UserId") ?? 0;

    // Lấy trạng thái từ Controller
    bool isOrganizer = ViewBag.IsOrganizer != null && (bool)ViewBag.IsOrganizer;
    bool hasPending = ViewBag.HasPendingRequest != null && (bool)ViewBag.HasPendingRequest;
}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    .register-container {
        max-width: 1400px;
        margin: 135px auto;
        padding: 0 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-card {
        background: #ffffff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #0066cc 0%, #004999 100%);
        padding: 30px 20px;
        text-align: center;
        color: white;
    }

        .card-header-custom h3 {
            margin: 0 0 10px 0;
            font-size: 28px;
            text-transform: uppercase;
        }

    .alert-custom {
        border: 1px solid #0066cc;
        background: #e6f2ff;
        padding: 15px;
        margin: 20px 30px;
        border-radius: 5px;
        color: #003d7a;
    }

    .two-column-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        padding: 30px;
    }

    .left-column {
        padding-right: 20px;
        border-right: 2px solid #e0e0e0;
    }

    .right-column {
        padding-left: 20px;
    }

    /* Info Sections */
    .info-section {
        background: #f9f9f9;
        border-left: 4px solid #0066cc;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

        .info-section h4 {
            color: #0066cc;
            margin-bottom: 15px;
            font-size: 16px;
            text-transform: uppercase;
            font-weight: bold;
        }

        .info-section ul {
            padding-left: 20px;
            margin: 0;
        }

        .info-section li {
            color: #444;
            margin: 6px 0;
            font-size: 13px;
            line-height: 1.6;
        }

    .requirements-list {
        background: white;
        border: 1px solid #ddd;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .note-box {
        background: #fffbf0;
        border: 1px solid #ffcc00;
        padding: 15px;
        margin: 15px 0;
        border-radius: 4px;
        color: #333;
        font-size: 13px;
    }

    /* Poster Section */
    .poster-section {
        background: linear-gradient(135deg, #0066cc 0%, #004999 100%);
        border-radius: 12px;
        padding: 35px 30px;
        text-align: center;
        color: white;
        margin-bottom: 30px;
        box-shadow: 0 6px 20px rgba(0, 102, 204, 0.4);
    }

        .poster-section h2 {
            font-size: 32px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

    .benefits {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 10px;
        padding: 25px 20px;
        margin: 20px 0;
        backdrop-filter: blur(10px);
        text-align: left;
    }

    .benefit-item {
        display: flex;
        align-items: flex-start;
        margin: 15px 0;
    }

    .benefit-icon {
        width: 40px;
        height: 40px;
        background: rgba(255,255,255,0.25);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .benefit-text strong {
        display: block;
        margin-bottom: 3px;
    }

    .benefit-text {
        font-size: 14px;
        line-height: 1.4;
    }

    .cta-badge {
        background: linear-gradient(135deg, #ffcc00 0%, #ff9900 100%);
        color: #003d7a;
        padding: 15px 30px;
        border-radius: 30px;
        font-weight: bold;
        display: inline-block;
        margin-top: 20px;
        box-shadow: 0 4px 15px rgba(255, 204, 0, 0.5);
    }

    /* Form Section */
    .registration-form-section {
        background: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        border: 2px solid #0066cc;
    }

        .registration-form-section h3 {
            color: #0066cc;
            margin-bottom: 25px;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
            font-size: 22px;
        }

    .form-group-custom {
        margin-bottom: 20px;
    }

    .form-label-custom {
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #ddd;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        font-family: inherit;
    }

        .form-control-custom:focus {
            border-color: #0066cc;
            outline: none;
        }

    .btn-custom {
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        background: linear-gradient(135deg, #0066cc 0%, #004999 100%);
        color: white;
        text-transform: uppercase;
        transition: 0.3s;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 102, 204, 0.4);
        }

        .btn-custom:disabled {
            background: #cccccc;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 5px;
        display: block;
    }

    /* Pending / Success Card */
    .status-card {
        padding: 30px;
        text-align: center;
        margin-bottom: 25px;
        border-radius: 10px;
    }

    .pending-card {
        background: #fff9e6;
        border: 2px solid #ffcc00;
    }

        .pending-card h4 {
            color: #cc6600;
            margin-bottom: 10px;
            font-size: 20px;
            font-weight: bold;
        }

    .success-card {
        background: #d4edda;
        border: 2px solid #28a745;
    }

        .success-card h4 {
            color: #155724;
            margin-bottom: 10px;
            font-size: 20px;
            font-weight: bold;
        }

    @@media (max-width: 968px) {
        .two-column-layout {
            grid-template-columns: 1fr;
        }

        .left-column {
            border-right: none;
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 20px;
            padding-right: 0;
        }

        .right-column {
            padding-left: 0;
            padding-top: 20px;
        }
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="card-header-custom">
            <h3>🎯 Đăng Ký Làm Ban Tổ Chức Sự Kiện</h3>
            <p>Trở thành người tạo nên những trải nghiệm đáng nhớ cho cộng đồng</p>
        </div>

        @if (TempData["Msg"] != null)
        {
            <div class="alert-custom">
                <strong>Thông báo:</strong> @TempData["Msg"]
            </div>
        }

        <div class="two-column-layout">
            <div class="left-column">
                <div class="info-section">
                    <h4>🌟 I. Quyền Lợi Của Ban Tổ Chức</h4>
                    <ul>
                        <li>Tạo và quản lý các sự kiện trên hệ thống</li>
                        <li>Chỉnh sửa, cập nhật thông tin sự kiện linh hoạt</li>
                        <li>Xem và quản lý danh sách người đăng ký tham gia</li>
                        <li>Sử dụng đầy đủ công cụ hỗ trợ tổ chức chuyên nghiệp</li>
                    </ul>
                </div>

                <div class="info-section">
                    <h4>📋 II. Trách Nhiệm Của Ban Tổ Chức</h4>
                    <ul>
                        <li>Đảm bảo tính chính xác và đầy đủ của thông tin sự kiện</li>
                        <li>Cập nhật kịp thời mọi thay đổi về thời gian, địa điểm</li>
                        <li>Bảo mật thông tin cá nhân của người đăng ký</li>
                        <li>Chịu trách nhiệm về nội dung và chất lượng sự kiện</li>
                    </ul>
                </div>

                <div class="requirements-list">
                    <h4>✅ III. Điều Kiện Đăng Ký</h4>
                    <ol>
                        <li>Là sinh viên, cán bộ hoặc giảng viên của trường</li>
                        <li>Tài khoản đã được kích hoạt và xác thực email</li>
                        <li>Cam kết tuân thủ đầy đủ các quy định</li>
                    </ol>
                </div>

                <div class="note-box">
                    <p><strong>⚡ Lưu Ý:</strong> Ban Quản Trị có quyền từ chối hoặc gỡ bỏ quyền BTC nếu phát hiện vi phạm quy định của nhà trường và hệ thống.</p>
                </div>
            </div>

            <div class="right-column">

                <div class="poster-section">
                    <h2>TRỞ THÀNH BAN TỔ CHỨC</h2>
                    <p class="subtitle">Khám phá tiềm năng của bạn!</p>

                    <div class="benefits">
                        <div class="benefit-item">
                            <div class="benefit-icon">🚀</div>
                            <div class="benefit-text"><strong>Phát Triển Kỹ Năng</strong>Quản lý và tổ chức chuyên nghiệp</div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">🤝</div>
                            <div class="benefit-text"><strong>Mở Rộng Mạng Lưới</strong>Kết nối với cộng đồng sinh viên</div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">💼</div>
                            <div class="benefit-text"><strong>CV Nổi Bật</strong>Điểm cộng lớn cho hồ sơ năng lực</div>
                        </div>
                    </div>
                    <div class="cta-badge">🌟 HƠN 500+ SỰ KIỆN ĐÃ TỔ CHỨC 🌟</div>
                </div>

                @if (isOrganizer)
                {
                    <div class="status-card success-card">
                        <h4>🎉 BẠN ĐÃ LÀ BAN TỔ CHỨC</h4>
                        <p>Tài khoản của bạn đã có quyền tạo và quản lý sự kiện. Hãy truy cập trang quản trị để bắt đầu.</p>
                    </div>
                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="btn-custom" style="display:block; text-align:center; text-decoration:none;">Truy cập trang quản lý</a>
                }
                else if (hasPending)
                {
                    <div class="status-card pending-card">
                        <h4>⏳ YÊU CẦU ĐANG CHỜ DUYỆT</h4>
                        <p>Yêu cầu của bạn đang được Ban Quản Trị xem xét. Kết quả sẽ được thông báo qua email trong vòng <strong>2-3 ngày làm việc</strong>.</p>
                    </div>
                    <button class="btn-custom" disabled>✓ ĐÃ GỬI YÊU CẦU</button>
                }
                else
                {
                    <div class="registration-form-section">
                        <h3>📝 Đăng Ký Ngay</h3>

                        <form asp-action="RequestOrganizer" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="UserId" value="@userIdSession" />

                            <div class="form-group-custom">
                                <label class="form-label-custom">Vai trò:</label>
                                <input asp-for="RequestedRole" class="form-control-custom" value="Organizer" readonly />
                            </div>

                            <div class="form-group-custom">
                                <label asp-for="Reason" class="form-label-custom">
                                    Lý do / Động lực: <span style="color: red;">*</span>
                                </label>
                                <textarea asp-for="Reason" class="form-control-custom" rows="6" required
                                          placeholder="Chia sẻ kinh nghiệm tổ chức (nếu có), mục đích đăng ký và loại hình sự kiện bạn dự định tổ chức..."></textarea>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>

                            <div class="note-box">
                                <p>☑ Tôi cam kết tuân thủ quy định khi tổ chức sự kiện.</p>
                                <p>☑ Tôi đồng ý cho hệ thống xử lý thông tin cá nhân.</p>
                            </div>

                            <button type="submit" class="btn-custom">🚀 Gửi Yêu Cầu</button>
                        </form>
                    </div>
                }

            </div>
        </div>
    </div>
</div>