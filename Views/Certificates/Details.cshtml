            background: rgba(26, 95, 180, 0.03);
            border-radius: 8px;
            display: inline-block;
        }

        .event-detail-item {
            font-size: 14px;
            color: #555;
            margin: 5px 0;
        }

        .event-detail-item strong {
            color: #333;
        }

        /* Footer */
        .cert-footer {
            margin-top: auto;
            padding-top: 20px;
        }

        .date-location {
            text-align: right;
            font-size: 13px;
            font-style: italic;
            color: #333;
            margin-bottom: 12px;
            padding-right: 30px;
        }

        .signature-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            padding: 0 15px;
        }

        .cert-number {
            text-align: left;
            font-size: 12px;
            font-weight: 700;
            color: #1a5fb4;
        }

        .signature-block {
            text-align: center;
