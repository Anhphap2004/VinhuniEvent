            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-toolbar:hover {
            background: #1a5fb4;
            color: white;
            border-color: #1a5fb4;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(26, 95, 180, 0.3);
        }

        /* Certificate Paper - A4 */
        .certificate {
            width: 210mm;
            height: 297mm;
            background: white;
            position: relative;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        /* Blue decorative borders */
        .border-left {
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 22px;
            background: linear-gradient(180deg, #1a5fb4 0%, #3584e4 50%, #1a5fb4 100%);
        }

        .border-left::before {
            content: '';
            position: absolute;
            right: -6px;
            top: 0;
            bottom: 0;
            width: 6px;
            background: linear-gradient(180deg, #f5a623 0%, #f8d86e 50%, #f5a623 100%);
        }

        .border-right {
            position: absolute;
            right: 0;
            top: 0;
            bottom: 0;
            width: 22px;
            background: linear-gradient(180deg, #1a5fb4 0%, #3584e4 50%, #1a5fb4 100%);
        }

        .border-right::before {
            content: '';
            position: absolute;
            left: -6px;
            top: 0;
            bottom: 0;
            width: 6px;
            background: linear-gradient(180deg, #f5a623 0%, #f8d86e 50%, #f5a623 100%);
        }

        /* Inner border */
        .inner-border {
            position: absolute;
            top: 12px;
            left: 40px;
            right: 40px;
            bottom: 12px;
            border: 2px solid #1a5fb4;
            pointer-events: none;
        }

        /* Watermark */
        .watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 200px;
            color: rgba(26, 95, 180, 0.04);
            font-weight: bold;
            white-space: nowrap;
            pointer-events: none;
        }

        .watermark-text {
            position: absolute;
            top: 38%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-20deg);
            font-size: 55px;
            color: rgba(26, 95, 180, 0.04);
            font-weight: bold;
            white-space: nowrap;
            pointer-events: none;
            letter-spacing: 8px;
        }

        /* Content */
        .cert-content {
            position: relative;
            z-index: 2;
            padding: 25px 55px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        /* Header */
        .cert-header {
            text-align: center;
            margin-bottom: 10px;
        }

        .org-name {
            font-size: 14px;
            font-weight: 700;
            color: #1a5fb4;
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-bottom: 12px;
        }

        .logo-container {
