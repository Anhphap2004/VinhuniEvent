@model IEnumerable<VinhuniEvent.Models.EventCategory>

<div class="container-fluid event py-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small
                class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Latest
                Events</small>
            <h1 class="display-5 mb-5">Our Social & Professional Events Gallery</h1>
        </div>

        <div class="tab-class text-center">
            <!-- Tabs -->
            <ul class="nav nav-pills d-inline-flex justify-content-center mb-5 wow bounceInUp" data-wow-delay="0.1s">
                <li class="nav-item p-2">
                    <a class="d-flex mx-2 py-2 border border-primary bg-light rounded-pill active" data-bs-toggle="pill"
                        href="#tab-all">
                        <span class="text-dark" style="width: 150px;">All Events</span>
                    </a>
                </li>
                @foreach (var cat in Model)
                {
                    <li class="nav-item p-2">
                        <a class="d-flex mx-2 py-2 border border-primary bg-light rounded-pill" data-bs-toggle="pill"
                            href="#tab-@cat.CategoryId">
                            <span class="text-dark" style="width: 150px;">@cat.CategoryName</span>
                        </a>
                    </li>
                }
            </ul>

            <!-- Tab Contents -->
            <div class="tab-content">
                <!-- All Events -->
                <div id="tab-all" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var cat in Model)
                        {   
                            @foreach (var e in cat.Events)
                            {
                                <div class="col-md-6 col-lg-3 wow bounceInUp" data-wow-delay="0.1s">
                                    <div class="event-img position-relative">
                                        <img class="img-fluid rounded w-100"
                                            src="@(string.IsNullOrEmpty(e.Image) 
                                                                                                                                                                                                              ? Url.Content("~/main/img/events/cat.jpg") 
                                                                                                                                                                                                              : Url.Content("~/" + e.Image))"
                                            alt="@e.Title">

                                        <div class="event-overlay d-flex flex-column p-4">
                                            <h4 class="me-auto">@cat.CategoryName</h4>
                                            <a href="@(Url.Content("~/" + (string.IsNullOrEmpty(e.Image) ? "main/img/events/cat.jpg" : e.Image)))"
                                                data-lightbox="event-all" class="my-auto">
                                                <i class="fas fa-search-plus text-dark fa-2x"></i>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>

                <!-- Tabs by Category -->
                @foreach (var cat in Model)
                {
                    <div id="tab-@cat.CategoryId" class="tab-pane fade show p-0">
                        <div class="row g-4">
                            @if (cat.Events == null || !cat.Events.Any())
                            {
                                <p class="text-muted">No events found in this category.</p>
                            }
                            else
                            {
                                @foreach (var e in cat.Events)
                                {
                                    <div class="col-md-6 col-lg-3 wow bounceInUp" data-wow-delay="0.1s">
                                        <div class="event-img position-relative">
                                            <img class="img-fluid rounded w-100"
                                                src="@(string.IsNullOrEmpty(e.Image) 
                                                                                                                                                                                                                  ? Url.Content("~/main/img/events/cat.jpg") 
                                                                                                                                                                                                                  : Url.Content("~/" + e.Image))"
                                                alt="@e.Title">
                                            <div class="event-overlay d-flex flex-column p-4">
                                                <h4 class="me-auto">@cat.CategoryName</h4>
                                                <a href="@(string.IsNullOrEmpty(e.Image) ? "#" : $"/images/events/{e.Image}")"
                                                    data-lightbox="event-@cat.CategoryId" class="my-auto">
                                                    <i class="fas fa-search-plus text-dark fa-2x"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>