	<!-- Global Fireworks JavaScript with Tet Colors -->
	<script>
		// Tet Color Palette
		const TET_COLORS = ['#D32F2F', '#FDB913', '#C8102E', '#FFD700', '#FF6B35', '#E8463D'];

		// Fireworks Effect - Global
		const canvasGlobal = document.getElementById('fireworks-global');
		const ctxGlobal = canvasGlobal.getContext('2d');
		canvasGlobal.width = window.innerWidth;
		canvasGlobal.height = window.innerHeight;

		let particlesGlobal = [];

		class ParticleGlobal {
			constructor(x, y) {
				this.x = x;
				this.y = y;
				this.velocity = {
					x: (Math.random() - 0.5) * 10,
					y: (Math.random() - 0.5) * 10
				};
				this.alpha = 1;
				this.decay = Math.random() * 0.02 + 0.015;
				this.size = Math.random() * 4 + 2;
				this.color = TET_COLORS[Math.floor(Math.random() * TET_COLORS.length)];
				this.rotation = Math.random() * Math.PI * 2;
				this.rotationSpeed = (Math.random() - 0.5) * 0.1;
			}

			draw() {
				ctxGlobal.save();
				ctxGlobal.globalAlpha = this.alpha;
				ctxGlobal.fillStyle = this.color;
				ctxGlobal.translate(this.x, this.y);
				ctxGlobal.rotate(this.rotation);
				
				// Draw star shape
				for (let i = 0; i < 5; i++) {
					ctxGlobal.beginPath();
					ctxGlobal.arc(
						Math.cos(i * Math.PI * 2 / 5) * this.size,
						Math.sin(i * Math.PI * 2 / 5) * this.size,
						this.size * 0.3, 0, Math.PI * 2
					);
					ctxGlobal.fill();
				}
				
				ctxGlobal.beginPath();
				ctxGlobal.arc(0, 0, this.size, 0, Math.PI * 2);
				ctxGlobal.fill();
				ctxGlobal.restore();
			}

			update() {
				this.velocity.y += 0.15;
				this.x += this.velocity.x;
				this.y += this.velocity.y;
				this.alpha -= this.decay;
				this.rotation += this.rotationSpeed;
			}
		}

		function createFireworksGlobal(x, y) {
			const particleCount = 40;
			for (let i = 0; i < particleCount; i++) {
				particlesGlobal.push(new ParticleGlobal(x, y));
			}
		}

		function animateGlobal() {
			ctxGlobal.clearRect(0, 0, canvasGlobal.width, canvasGlobal.height);

			particlesGlobal.forEach((particle, index) => {
				particle.update();
				particle.draw();

				if (particle.alpha <= 0) {
					particlesGlobal.splice(index, 1);
				}
			});

			if (particlesGlobal.length > 0) {
				requestAnimationFrame(animateGlobal);
			}
		}

		// Auto fireworks every 3-5 seconds with Tet energy
		setInterval(() => {
			const randomX = Math.random() * window.innerWidth;
			const randomY = Math.random() * window.innerHeight * 0.6;
			createFireworksGlobal(randomX, randomY);
			animateGlobal();
		}, Math.random() * 1500 + 2500);

		// Fireworks on click with extra burst for Tet
		document.addEventListener('click', (e) => {
			createFireworksGlobal(e.clientX, e.clientY);
			animateGlobal();
		});

		// Handle window resize
		window.addEventListener('resize', () => {
			canvasGlobal.width = window.innerWidth;
			canvasGlobal.height = window.innerHeight;
		});
	</script>
