<!-- End banner Area -->
<!-- Start featured-event Area -->
<section class="featured-event-area section-gap">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-70 col-lg-8">
				<div class="title text-center">
					<h1 class="mb-10">🎊 Sự kiện nổi bật</h1>
					<p>Khám phá những khoảnh khắc đáng nhớ cùng các hoạt động mới nhất của trường.</p>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="active-popular-carusel">
				@foreach (var p in EventNew)
				{
					<div class="single-popular-carusel">
						<div class="thumb-wrap relative">
							<div class="thumb relative">
								<div class="overlay overlay-bg"></div>
								<img style="width: 100%; height: 200px;" class="img-fluid rounded-2xl shadow-lg" src="~/main/img/events/@p.Image" alt="@p.Title">
							</div>
							<div class="meta d-flex justify-content-between align-items-center px-3 py-2">
								<p class="mb-0">
									<span class="lnr lnr-calendar-full"></span> @p.CreatedDate?.ToString("dd/MM/yyyy")
								</p>
								<span class="badge bg-primary text-white px-3 py-1 rounded-pill">
									@p.Category?.CategoryName
								</span>
							</div>
						</div>

						<div class="details text-center mt-3">
							<a href="@Url.Action("Details", "Events", new { slug = p.Slug, id = p.EventId })">
								<h4 class="fw-bold text-dark">@p.Title</h4>
							</a>
							@* <p class="text-muted">@p.ShortDescription</p> *@
							<a href="@Url.Action("Details", "Events", new { slug = p.Slug, id = p.EventId })"
							   class="btn btn-outline-primary btn-sm mt-2 rounded-pill">
								Xem chi tiết
							</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>
