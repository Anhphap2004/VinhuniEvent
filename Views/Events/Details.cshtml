@model VinhuniEvent.Models.Event
@{
    ViewData["Title"] = Model.Title;
    List<VinhuniEvent.Models.Event> RelatedEvent = ViewBag.RelatedEvent;
    // Lấy UserId từ Controller truyền sang (Sửa lỗi ISession)
    int? currentUserId = ViewBag.CurrentUserId as int?;
}

<div class="event-detail-page-magazine">
    <div class="container py-5">
        <div class="magazine-hero-card">
            <div class="row align-items-center g-4">
                <div class="col-lg-8">
                    <div class="hero-image-content">
                        <img src="~/main/img/events/@Model.Image" alt="@Model.Title" class="hero-image-magazine">
                        <div class="hero-text-overlay">
                            <span class="event-category-badge mb-2">@Model.Category?.CategoryName</span>
                            <h1 class="hero-title-magazine text-white">@Model.Title</h1>
                            <div class="hero-quick-meta">
                                <span><i class="fa-solid fa-calendar-days me-2"></i> @Model.StartTime.ToString("dd/MM/yyyy HH:mm")</span>
                                <span><i class="fa-solid fa-location-dot me-2"></i> @Model.Location</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 d-flex flex-column h-100">
                    <div class="d-flex flex-column h-100 p-4">
                        <h5 class="fw-bold mb-3 text-uppercase" style="color: var(--primary-color);">Tóm tắt nhanh</h5>

                        <ul class="list-unstyled quick-details-list flex-grow-1">
                            <li><i class="fa-solid fa-calendar-alt"></i> Thời gian: @Model.StartTime.ToString("dd/MM/yyyy HH:mm")</li>
                            <li><i class="fa-solid fa-map-marker-alt"></i> Địa điểm: @Model.Location</li>
                            @if (Model.MaxParticipants.HasValue && Model.CurrentParticipants.HasValue)
                            {
                                <li><i class="fa-solid fa-users"></i>Đã đăng ký: @Model.CurrentParticipants/@Model.MaxParticipants người</li>
                            }
                            <li><i class="fa-solid fa-user-tie"></i> Người tạo: @Model.CreatedByNavigation?.FullName</li>
                            <li><i class="fa-solid fa-clock"></i>Ngày tạo: @Model.CreatedDate?.ToString("dd/MM/yyyy")</li>
                        </ul>

                        <div class="mt-auto pt-3 border-top">
                            @if (ViewBag.IsRegistrationExpired == true)
                            {
                                <button class="btn w-100 fw-bold btn-secondary" disabled>
                                    <i class="fa-solid fa-clock me-2"></i> Đã hết hạn đăng ký
                                </button>
                            }
                            else if (ViewBag.IsRegistered == true)
                            {
                                <button class="btn w-100 fw-bold btn-success" disabled>
                                    <i class="fa-solid fa-check me-2"></i> Đã đăng ký
                                </button>
                            }
                            else
                            {
                                <form asp-action="RegisterEvent" method="post">
                                    <input type="hidden" name="eventId" value="@Model.EventId" />
                                    <button type="submit" class="btn btn-primary-cta w-100 fw-bold">
                                        <i class="fa-solid fa-ticket me-2"></i> Đăng ký tham gia
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-5 pt-5">
            <div class="col-lg-8">
                <div class="content-panel-card">
                    <section class="mb-5">
                        <h2 class="section-title-magazine"><i class="fa-solid fa-book-open me-2"></i> Giới thiệu sự kiện</h2>
                        <div class="text-secondary event-description" style="font-size: 16px; line-height: 1.7;">
                            @Html.Raw(Model.Description)
                        </div>
                    </section>

                    <section class="mb-5" id="comments">
                        <div class="d-flex align-items-center mb-4">
                            <h2 class="section-title-magazine mb-0 border-0 me-3">
                                <i class="fa-solid fa-comments me-2"></i> Thảo luận
                            </h2>
                            <span class="badge bg-light text-dark border">
                                @Model.EventComments.Count() bình luận
                            </span>
                        </div>

                        @if (currentUserId != null)
                        {
                            <div class="comment-form-wrapper mb-5 p-4 bg-white rounded shadow-sm border">
                                <div class="d-flex gap-3">
                                    <div class="avatar-placeholder bg-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px; font-weight: bold;">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <form asp-action="AddComment" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@Model.EventId" />
                                            <textarea name="content" class="form-control mb-2" rows="2" placeholder="Viết bình luận của bạn..." required></textarea>
                                            <div class="text-end">
                                                <button class="btn btn-primary btn-sm px-4 fw-bold">
                                                    <i class="fa-solid fa-paper-plane me-1"></i> Gửi bình luận
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light border border-warning text-center py-4 mb-4">
                                <i class="fa-solid fa-lock text-warning mb-2 fs-4 d-block"></i>
                                <span>Vui lòng <a asp-controller="Login" asp-action="Index" class="fw-bold text-primary text-decoration-none">đăng nhập</a> để tham gia thảo luận.</span>
                            </div>
                        }

                        <div class="comment-list">
                            @if (Model.EventComments != null && Model.EventComments.Any())
                            {
                                // Chỉ lấy comment cha (ParentCommentId == null)
                                @foreach (var c in Model.EventComments.Where(x => x.ParentCommentId == null).OrderByDescending(x => x.CreatedAt))
                                {
                                    <div class="comment-item mb-4">
                                        <div class="d-flex gap-3">
                                            <div class="avatar-placeholder bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px; font-weight: bold; font-size: 14px;">
                                                @(c.User?.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>

                                            <div class="flex-grow-1">
                                                <div class="bg-light p-3 rounded-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <strong class="text-dark">@c.User?.FullName</strong>
                                                        <small class="text-muted" style="font-size: 12px;">@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                                    </div>
                                                    <p class="mb-0 text-secondary" style="font-size: 15px;">@c.Content</p>
                                                </div>

                                                <div class="d-flex gap-3 mt-1 ms-2">
                                                    @if (currentUserId != null)
                                                    {
                                                        <a href="javascript:void(0)" class="text-decoration-none text-muted small fw-bold" onclick="toggleReplyBox(@c.CommentId)">
                                                            <i class="fa-solid fa-reply me-1"></i> Trả lời
                                                        </a>
                                                    }
                                                </div>

                                                <div id="reply-box-@c.CommentId" class="reply-box d-none mt-3 ms-3">
                                                    <form asp-action="AddComment" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="eventId" value="@Model.EventId" />

                                                        <input type="hidden" name="parentId" value="@c.CommentId" />

                                                        <div class="d-flex gap-2">
                                                            <textarea name="content" class="form-control form-control-sm" rows="1" placeholder="Viết câu trả lời..." required></textarea>
                                                            <button class="btn btn-primary btn-sm" style="width: 80px;">Gửi</button>
                                                        </div>
                                                    </form>
                                                </div>

                                                @if (c.Replies != null && c.Replies.Any())
                                                {
                                                    <div class="replies-list mt-3">
                                                        @foreach (var r in c.Replies.OrderBy(x => x.CreatedAt))
                                                        {
                                                            <div class="d-flex gap-3 mb-3">
                                                                <div class="position-relative">
                                                                    <div style="position: absolute; top: -20px; left: 15px; width: 2px; height: 30px; background: #e9ecef; border-bottom-left-radius: 10px;"></div>
                                                                    <div class="avatar-placeholder bg-info text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 30px; height: 30px; font-size: 12px; z-index: 1; position: relative;">
                                                                        @(r.User?.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                                                    </div>
                                                                </div>

                                                                <div class="flex-grow-1">
                                                                    <div class="bg-light p-2 px-3 rounded-3">
                                                                        <div class="d-flex justify-content-between align-items-center">
                                                                            <strong class="text-dark small">@r.User?.FullName</strong>
                                                                            <small class="text-muted" style="font-size: 11px;">@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                                                        </div>
                                                                        <p class="mb-0 text-secondary small">@r.Content</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <img src="https://cdn-icons-png.flaticon.com/512/1380/1380338.png" alt="No comments" style="width: 60px; opacity: 0.5;">
                                    <p class="text-muted mt-3">Chưa có bình luận nào. Hãy là người đầu tiên chia sẻ ý kiến!</p>
                                </div>
                            }
                        </div>
                    </section>

                    <script>
                        function toggleReplyBox(commentId) {
                            var replyBox = document.getElementById('reply-box-' + commentId);
                            if (replyBox.classList.contains('d-none')) {
                                replyBox.classList.remove('d-none');
                                // Tự động focus vào ô nhập liệu
                                replyBox.querySelector('textarea').focus();
                            } else {
                                replyBox.classList.add('d-none');
                            }
                        }
                    </script>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar-sticky-card">
                    <h3 class="sidebar-title-magazine"><i class="fa-solid fa-newspaper me-2" style="color: var(--primary-color);"></i> Sự kiện liên quan</h3>

                    <div class="related-events-magazine">
                        @if (RelatedEvent != null && RelatedEvent.Any())
                        {
                            foreach (var ev in RelatedEvent)
                            {
                                <a href="@Url.Action("Details", "Events", new { slug = ev.Slug, id = ev.EventId })" class="related-event-item-magazine">
                                    <div class="related-image-magazine">
                                        <img src="~/main/img/events/@ev.Image" alt="@ev.Title">
                                    </div>
                                    <div class="related-info-magazine">
                                        <h4 class="related-title-magazine">@ev.Title</h4>
                                        <p class="related-date-magazine">
                                            <i class="fa-solid fa-calendar-alt me-1"></i>
                                            @ev.StartTime.ToString("dd/MM/yyyy")
                                        </p>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted fst-italic p-3">Không có sự kiện liên quan.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #0d6efd;
        --accent-color: #ffc107;
        --text-dark: #212529;
        --text-muted: #6c757d;
        --bg-light: #f8f9fa;
        --border-light: #dee2e6;
        --shadow-magazine: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: var(--bg-light);
    }

    .event-detail-page-magazine .container {
        max-width: 1200px;
    }

    /* Hero Section */
    .magazine-hero-card {
        background: white;
        border-radius: 12px;
        box-shadow: var(--shadow-magazine);
        overflow: hidden;
    }

    .hero-image-content {
        position: relative;
        height: 380px;
    }

    .hero-image-magazine {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-text-overlay {
        position: absolute;
        inset: 0;
        padding: 30px;
        color: white;
        background: linear-gradient(90deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.2) 60%, rgba(0, 0, 0, 0) 100%);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .event-category-badge {
        display: inline-block;
        padding: 6px 15px;
        background-color: var(--accent-color);
        color: var(--text-dark);
        border-radius: 6px;
        font-weight: 700;
        font-size: 13px;
    }

    .hero-title-magazine {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 10px;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
    }

    .hero-quick-meta span {
        font-size: 15px;
        margin-right: 15px;
        opacity: 0.9;
    }

    /* Right Sidebar in Hero */
    .quick-details-list li {
        border-bottom: 1px dashed #f0f0f0;
        padding: 10px 0;
        color: var(--text-muted);
        font-size: 15px;
    }

        .quick-details-list li i {
            color: var(--primary-color);
            width: 20px;
            margin-right: 5px;
        }

    .btn-primary-cta {
        background-color: var(--primary-color);
        color: white;
        padding: 12px 20px;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

        .btn-primary-cta:hover {
            background-color: #0b5ed7;
        }

    /* Content & Comments */
    .content-panel-card {
        padding: 20px 0;
    }

    .section-title-magazine {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 25px;
        padding-bottom: 5px;
        border-bottom: 3px solid var(--border-light);
    }

    .event-description img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 15px 0;
    }

    /* Sidebar Sticky */
    .sidebar-sticky-card {
        background: white;
        border-radius: 12px;
        box-shadow: var(--shadow-magazine);
        padding: 25px;
        position: sticky;
        top: 20px;
    }

    .related-event-item-magazine {
        display: flex;
        gap: 15px;
        text-decoration: none;
        padding: 10px;
        border-radius: 8px;
        transition: 0.2s;
    }

        .related-event-item-magazine:hover {
            background-color: var(--bg-light);
        }

    .related-image-magazine {
        width: 80px;
        height: 60px;
        border-radius: 6px;
        overflow: hidden;
        flex-shrink: 0;
    }

        .related-image-magazine img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .related-title-magazine {
        font-size: 15px;
        font-weight: 600;
        color: var(--text-dark);
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .related-date-magazine {
        font-size: 13px;
        color: var(--text-muted);
        margin: 0;
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .hero-image-content {
            height: 250px;
        }

        .sidebar-sticky-card {
            position: static;
        }
    }
</style>