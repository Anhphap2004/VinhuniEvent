@model VinhuniEvent.Models.Event
@{
    ViewData["Title"] = Model.Title;
    List<VinhuniEvent.Models.Event> RelatedEvent = ViewBag.RelatedEvent;
    int? currentUserId = ViewBag.CurrentUserId as int?;
}

<div class="modern-event-page">
    <div class="page-header-decor"></div>

    <div class="container main-container">
        <div class="row g-4">

            <div class="col-lg-8">

                <div class="content-card animate-up">
                    <div class="event-header">
                        <span class="badge bg-primary-subtle text-primary mb-3 px-3 py-2 rounded-pill fw-bold">
                            @Model.Category?.CategoryName
                        </span>
                        <h1 class="event-title">@Model.Title</h1>

                        <div class="event-meta-row">
                            <div class="meta-item">
                                <i class="fa-regular fa-calendar"></i>
                                <span>@Model.StartTime.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="meta-item">
                                <i class="fa-regular fa-clock"></i>
                                <span>@Model.StartTime.ToString("HH:mm")</span>
                            </div>
                            <div class="meta-item location">
                                <i class="fa-solid fa-location-dot"></i>
                                <span>@Model.Location</span>
                            </div>
                        </div>
                    </div>

                    <div class="event-hero-image-wrapper mt-4">
                        <img src="~/main/img/events/@Model.Image" alt="@Model.Title" class="event-hero-image">
                    </div>

                    <div class="event-body mt-5">
                        <h3 class="section-title">Giới thiệu</h3>
                        <div class="description-content">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>

                <div class="content-card mt-4 animate-up" style="animation-delay: 0.1s;">
                    <div class="comments-header mb-4">
                        <h3 class="fw-bold fs-4">
                            <i class="fa-solid fa-comments me-2 text-primary"></i>Thảo luận
                            <span class="text-muted fs-6 fw-normal ms-1">(@Model.EventComments.Count())</span>
                        </h3>
                    </div>

                    @if (currentUserId != null)
                    {
                        <div class="comment-compose mb-5">
                            <div class="d-flex gap-3">
                                <div class="user-avatar-current">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <form asp-action="AddComment" method="post" class="position-relative">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="eventId" value="@Model.EventId" />
                                        <div class="input-wrapper">
                                            <textarea name="content" class="form-control comment-textarea" rows="2"
                                            placeholder="Viết bình luận công khai..." required></textarea>
                                            <button class="btn-send-icon"><i class="fa-solid fa-paper-plane"></i></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="login-alert">
                            <i class="fa-solid fa-lock me-2"></i>
                            <span>Vui lòng <a asp-controller="Login" asp-action="Index">đăng nhập</a> để tham gia thảo
                                luận.</span>
                        </div>
                    }

                    <div class="comment-list-wrapper">
                        @if (Model.EventComments != null && Model.EventComments.Any())
                        {
                            foreach (var c in Model.EventComments.Where(x => x.ParentCommentId == null).OrderByDescending(x
                            => x.CreatedAt))
                            {
                                <div class="comment-item-root mb-3">
                                    <div class="d-flex gap-2">
                                        <div class="avatar-placeholder rounded-circle bg-gradient-gray text-white d-flex align-items-center justify-content-center flex-shrink-0"
                                            style="width: 40px; height: 40px; font-weight: bold;">
                                            @(c.User?.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>

                                        <div class="flex-grow-1">
                                            <div class="comment-bubble">
                                                <div class="d-flex justify-content-between align-items-baseline">
                                                    <span class="comment-author">@c.User?.FullName</span>
                                                    <small class="comment-time">@c.CreatedAt.ToString("dd/MM HH:mm")</small>
                                                </div>
                                                <p class="comment-content">@c.Content</p>
                                            </div>

                                            <div class="comment-actions">
                                                @if (currentUserId != null)
                                                {
                                                    <button class="btn-reply-trigger" onclick="toggleReplyBox(@c.CommentId)">Trả
                                                        lời</button>
                                                }
                                            </div>

                                            <div id="reply-box-@c.CommentId" class="reply-box d-none mt-2">
                                                <form asp-action="AddComment" method="post"
                                                    class="d-flex align-items-center gap-2">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="eventId" value="@Model.EventId" />
                                                    <input type="hidden" name="parentId" value="@c.CommentId" />
                                                    <div class="position-relative w-100">
                                                        <input type="text" name="content"
                                                            class="form-control rounded-pill bg-light small-input"
                                                            placeholder="Viết phản hồi..." required>
                                                        <button class="btn-send-small"><i
                                                                class="fa-solid fa-paper-plane"></i></button>
                                                    </div>
                                                </form>
                                            </div>

                                            @if (c.Replies != null && c.Replies.Any())
                                            {
                                                <div class="replies-container">
                                                    @foreach (var r in c.Replies.OrderBy(x => x.CreatedAt))
                                                    {
                                                        <div class="reply-item d-flex gap-2 position-relative">
                                                            <div class="connector-curve"></div>
                                                            <div class="avatar-placeholder rounded-circle bg-info text-white d-flex align-items-center justify-content-center flex-shrink-0"
                                                                style="width: 32px; height: 32px; font-size: 12px; z-index: 1;">
                                                                @(r.User?.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                                            </div>
                                                            <div class="comment-bubble bg-light-gray">
                                                                <div class="d-flex justify-content-between align-items-baseline">
                                                                    <span class="comment-author small">@r.User?.FullName</span>
                                                                    <small class="comment-time">@r.CreatedAt.ToString("HH:mm")</small>
                                                                </div>
                                                                <p class="comment-content small mb-0">@r.Content</p>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-comments">
                                <img src="https://cdn-icons-png.flaticon.com/512/1380/1380338.png" alt="No comments">
                                <p>Chưa có bình luận nào.</p>
                            </div>
                        }
                    </div>
                </div>

            </div>

            <div class="col-lg-4">
                <div class="sidebar-sticky-wrapper">

                    <div class="sidebar-card highlight-border animate-left">
                        <h4 class="sidebar-title">Thông tin vé</h4>

                        <div class="stats-grid">
                            <div class="stat-box">
                                <i class="fa-solid fa-users text-primary"></i>
                                <span class="stat-label">Đã đăng ký</span>
                                <span class="stat-value">@(Model.CurrentParticipants ?? 0)/@(Model.MaxParticipants ??
                                                                        0)</span>
                            </div>
                            <div class="stat-box">
                                <i class="fa-solid fa-user-tie text-success"></i>
                                <span class="stat-label">Người tạo</span>
                                <span class="stat-value">@Model.CreatedByNavigation?.FullName</span>
                            </div>
                        </div>

                        <hr class="sidebar-divider">

                        <div class="action-btn-wrapper">
                            @if (ViewBag.IsRegistrationExpired == true)
                            {
                                <button class="btn btn-secondary w-100 py-3 fw-bold disabled" disabled>
                                    Đã hết hạn
                                </button>
                            }
                            else if (ViewBag.IsRegistered == true)
                            {
                                <button class="btn btn-success w-100 py-3 fw-bold disabled" disabled>
                                    <i class="fa-solid fa-check me-2"></i>Đã tham gia
                                </button>
                            }
                            else
                            {
                                <form asp-action="RegisterEvent" method="post">
                                    <input type="hidden" name="eventId" value="@Model.EventId" />
                                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold btn-register-effect">
                                        Đăng ký ngay
                                    </button>
                                </form>
                                <p class="text-center mt-2 mb-0 text-muted small fst-italic">Số lượng có hạn, đăng ký ngay!
                                </p>
                            }
                        </div>
                    </div>

                    <div class="sidebar-card mt-4 animate-left" style="animation-delay: 0.1s;">
                        <h5 class="sidebar-title fs-5 mb-3">Sự kiện khác</h5>
                        <div class="related-events-list">
                            @if (RelatedEvent != null && RelatedEvent.Any())
                            {
                                foreach (var ev in RelatedEvent)
                                {
                                    <a href="@Url.Action("Details", "Events", new { slug = ev.Slug, id = ev.EventId })"
                                        class="related-event-item">
                                        <div class="related-img">
                                            <img src="~/main/img/events/@ev.Image" alt="@ev.Title">
                                        </div>
                                        <div class="related-info">
                                            <h6>@ev.Title</h6>
                                            <span><i
                                                    class="fa-regular fa-calendar me-1"></i>@ev.StartTime.ToString("dd/MM")</span>
                                        </div>
                                    </a>
                                }
                            }
                            else
                            {
                                <p class="text-muted text-center py-3 small">Không có sự kiện liên quan.</p>
                            }
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function toggleReplyBox(id) {
        var box = document.getElementById('reply-box-' + id);
        box.classList.toggle('d-none');
        if (!box.classList.contains('d-none')) {
            box.querySelector('input').focus();
        }
    }
</script>

<style>
    /* Reset font to sans-serif */
    * {
        font-family: "Fredoka", "Poppins", sans-serif !important;
    }

    /* Tet Theme Variables */
    :root {
        --tet-red: #D32F2F;
        --tet-gold: #FDB913;
        --tet-red-light: #E8463D;
        --primary-color: var(--tet-red);
        --bg-body: linear-gradient(135deg, #FFF9E6 0%, #FFE8CC 100%);
        --bg-card: #ffffff;
        --text-main: #212529;
        --text-muted: #6c757d;
        --fb-bg-comment: #f0f2f5;
        --border-radius-card: 16px;
        --border-radius-bubble: 18px;
    }

    body {
        background: var(--bg-body);
        font-family: 'Fredoka', 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    .modern-event-page {
        position: relative;
        padding-bottom: 50px;
    }

    /* Decorative Header with Tet Colors */
    .page-header-decor {
        height: 280px;
        background: linear-gradient(135deg, var(--tet-red) 0%, #C8102E 50%, #8B0000 100%);
        border-bottom-left-radius: 50% 20%;
        border-bottom-right-radius: 50% 20%;
        margin-bottom: -200px;
        box-shadow: 0 8px 30px rgba(211, 47, 47, 0.25);
    }

    .main-container {
        position: relative;
        z-index: 2;
        /* Đè lên header */
    }

    /* 3. CARDS & LAYOUT */
    .content-card,
    .sidebar-card {
        background: var(--bg-card);
        border-radius: var(--border-radius-card);
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.02);
    }

    .highlight-border {
        border-top: 5px solid var(--tet-gold);
        box-shadow: 0 10px 30px rgba(211, 47, 47, 0.08);
    }

    /* 4. HERO SECTION */
    .event-title {
        font-weight: 800;
        font-size: 2.2rem;
        line-height: 1.2;
        color: var(--text-main);
        margin-bottom: 15px;
    }

    .event-meta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        color: var(--text-muted);
        font-weight: 500;
        font-size: 0.95rem;
    }

    .meta-item i {
        color: var(--primary-color);
        margin-right: 8px;
    }

    .event-hero-image-wrapper {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .event-hero-image {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.5s;
    }

    .event-hero-image:hover {
        transform: scale(1.02);
    }

    /* 5. CONTENT BODY */
    .section-title {
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 20px;
        position: relative;
        padding-left: 15px;
    }

    .section-title::before {
        content: '';
        position: absolute;
        left: 0;
        top: 5px;
        bottom: 5px;
        width: 4px;
        background: linear-gradient(180deg, var(--tet-red), var(--tet-gold));
        border-radius: 4px;
    }

    .description-content {
        font-size: 1.05rem;
        line-height: 1.8;
        color: #444;
    }

    .description-content img {
        max-width: 100%;
        border-radius: 8px;
        margin: 15px 0;
    }

    /* 6. FACEBOOK STYLE COMMENTS (Đã tích hợp) */
    .user-avatar-current {
        width: 40px;
        height: 40px;
        background: #e4e6eb;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #65676b;
    }

    .input-wrapper {
        position: relative;
    }

    .comment-textarea {
        background-color: var(--fb-bg-comment);
        border: none;
        border-radius: 20px;
        padding: 12px 50px 12px 15px;
        resize: none;
        transition: 0.2s;
    }

    .comment-textarea:focus {
        background-color: #fff;
        box-shadow: 0 0 0 2px #e7f3ff;
    }

    .btn-send-icon {
        position: absolute;
        bottom: 8px;
        right: 15px;
        border: none;
        background: none;
        color: var(--tet-red);
        cursor: pointer;
        font-size: 18px;
        transition: all 0.3s;
    }

    .btn-send-icon:hover {
        color: var(--tet-gold);
        transform: scale(1.15);
    }

    .comment-bubble {
        background-color: var(--fb-bg-comment);
        border-radius: 18px;
        padding: 10px 15px;
        display: inline-block;
        min-width: 120px;
    }

    .bg-light-gray {
        background-color: #e9ecef;
    }

    .comment-author {
        font-weight: 700;
        font-size: 0.95rem;
        color: #050505;
    }

    .comment-time {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-left: 10px;
    }

    .comment-content {
        margin-top: 4px;
        margin-bottom: 0;
        font-size: 0.95rem;
        color: #050505;
        line-height: 1.4;
    }

    .comment-actions {
        margin-left: 12px;
        margin-top: 2px;
    }

    .btn-reply-trigger {
        background: none;
        border: none;
        padding: 0;
        font-size: 12px;
        font-weight: 700;
        color: #65676b;
        cursor: pointer;
    }

    .btn-reply-trigger:hover {
        text-decoration: underline;
    }

    /* Reply Tree & Connector */
    .replies-container {
        position: relative;
        margin-top: 10px;
    }

    .reply-item {
        margin-top: 10px;
        padding-left: 0;
    }

    .connector-curve {
        position: absolute;
        top: -20px;
        left: -25px;
        width: 40px;
        height: 40px;
        border-bottom: 2px solid #e4e6eb;
        border-left: 2px solid #e4e6eb;
        border-bottom-left-radius: 15px;
        z-index: 0;
    }

    .btn-send-small {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        border: none;
        background: none;
        color: var(--tet-red);
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-send-small:hover {
        color: var(--tet-gold);
        transform: translateY(-50%) scale(1.15);
    }

    .small-input {
        padding-right: 35px;
    }

    .login-alert {
        background: #fff3cd;
        color: #856404;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
    }

    .empty-comments {
        text-align: center;
        padding: 40px 0;
        opacity: 0.6;
    }

    .empty-comments img {
        width: 50px;
        margin-bottom: 10px;
    }

    /* 7. SIDEBAR & RELATED */
    .sidebar-sticky-wrapper {
        position: sticky;
        top: 20px;
    }

    .sidebar-title {
        font-weight: 700;
        margin-bottom: 20px;
        color: var(--text-main);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .stat-box {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .stat-value {
        font-weight: 700;
        font-size: 0.95rem;
    }

    .btn-register-effect {
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        box-shadow: 0 6px 16px rgba(211, 47, 47, 0.25);
        background: linear-gradient(135deg, var(--tet-red), var(--tet-red-light)) !important;
        color: white;
        font-weight: 700;
    }

    .btn-register-effect:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 10px 24px rgba(211, 47, 47, 0.4);
    }

    .related-event-item {
        display: flex;
        gap: 12px;
        text-decoration: none;
        color: var(--text-main);
        padding: 10px;
        border-radius: 10px;
        transition: 0.2s;
    }

    .related-event-item:hover {
        background: #f8f9fa;
    }

    .related-img {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
        flex-shrink: 0;
    }

    .related-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .related-info h6 {
        font-size: 0.95rem;
        font-weight: 600;
        margin: 0;
        line-height: 1.3;
        margin-bottom: 4px;
    }

    .related-info span {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    /* 8. ANIMATIONS */
    .animate-up {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s forwards;
    }

    .animate-left {
        opacity: 0;
        transform: translateX(20px);
        animation: fadeLeft 0.6s forwards;
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeLeft {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .page-header-decor {
            height: 200px;
            margin-bottom: -50px;
        }

        .event-title {
            font-size: 1.8rem;
        }

        .sidebar-sticky-wrapper {
            position: static;
            margin-top: 30px;
        }
    }
</style>