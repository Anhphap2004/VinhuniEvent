@model VinhuniEvent.Models.Event
@{
    ViewData["Title"] = Model.Title;
    List<VinhuniEvent.Models.Event> RelatedEvent = ViewBag.RelatedEvent;
}

<div class="event-detail-page-magazine">
    <div class="container py-5">
        <div class="magazine-hero-card">
            <div class="row align-items-center g-4">
                <div class="col-lg-8">
                    <div class="hero-image-content">
                        <img src="~/main/img/events/@Model.Image" alt="@Model.Title" class="hero-image-magazine">
                        <div class="hero-text-overlay">
                            <span class="event-category-badge mb-2">@Model.Category?.CategoryName</span>
                            <h1 class="hero-title-magazine text-white">@Model.Title</h1>
                            <div class="hero-quick-meta">
                                <span><i class="fa-solid fa-calendar-days me-2"></i> @Model.StartTime.ToString("dd/MM/yyyy HH:mm")</span>
                                <span><i class="fa-solid fa-location-dot me-2"></i> @Model.Location</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 d-flex flex-column h-100">
                    <div class="d-flex flex-column h-100 p-4">
                        <h5 class="fw-bold mb-3 text-uppercase" style="color: var(--primary-color);">Tóm tắt nhanh</h5>

                        <ul class="list-unstyled quick-details-list flex-grow-1">
                            <li><i class="fa-solid fa-calendar-alt"></i> Thời gian: @Model.StartTime.ToString("dd/MM/yyyy HH:mm")</li>
                            <li><i class="fa-solid fa-map-marker-alt"></i> Địa điểm: @Model.Location</li>
                            @if (Model.MaxParticipants.HasValue && Model.CurrentParticipants.HasValue)
                            {
                                <li><i class="fa-solid fa-users"></i>Đã đăng ký: @Model.CurrentParticipants/@Model.MaxParticipants người</li>
                            }
                            <li><i class="fa-solid fa-user-tie"></i> Người tạo: @Model.CreatedByNavigation?.FullName</li>
                            <li><i class="fa-solid fa-clock"></i>Ngày tạo: @Model.CreatedDate?.ToString("dd/MM/yyyy")</li>
                        </ul>

                        <div class="mt-auto pt-3 border-top">
                            @if (ViewBag.IsRegistered == true)
                            {
                                <button class="btn w-100 fw-bold btn-success-disabled" disabled>
                                    <i class="fa-solid fa-check me-2"></i> Đã Đăng Ký
                                </button>
                            }
                            else
                            {
                                <form asp-action="RegisterEvent" method="post" class="d-inline">
                                    <input type="hidden" name="eventId" value="@Model.EventId" />
                                    <button type="submit" class="btn btn-primary-cta w-100 fw-bold">
                                        <i class="fa-solid fa-ticket me-2"></i> Đăng ký tham gia
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-5 pt-5">

            <div class="col-lg-8">
                <div class="content-panel-card">

                    <section class="mb-5">
                        <h2 class="section-title-magazine"><i class="fa-solid fa-book-open me-2"></i> Giới thiệu sự kiện</h2>
                        <div class="text-secondary" style="font-size: 16px; line-height: 1.7;">
                            @Html.Raw(Model.Description)
                        </div>
                    </section>

                    <section class="mb-5">
                        <h2 class="section-title-magazine"><i class="fa-solid fa-info-circle me-2"></i> Thông tin chi tiết</h2>
                        <div class="details-grid-magazine">
                            <div class="detail-item-magazine">
                                <div class="detail-label-magazine">Thời gian bắt đầu</div>
                                <div class="detail-value-magazine">@Model.StartTime.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="detail-item-magazine">
                                <div class="detail-label-magazine">Thời gian kết thúc</div>
                                <div class="detail-value-magazine">@Model.EndTime.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="detail-item-magazine">
                                <div class="detail-label-magazine">Địa điểm tổ chức</div>
                                <div class="detail-value-magazine">@Model.Location</div>
                            </div>
                            <div class="detail-item-magazine">
                                <div class="detail-label-magazine">Trạng thái sự kiện</div>
                                <div class="detail-value-magazine">
                                    <span class="badge bg-primary rounded-pill px-3 py-2">@Model.Status</span>
                                </div>
                            </div>
                            @if (Model.MaxParticipants.HasValue)
                            {
                                <div class="detail-item-magazine">
                                    <div class="detail-label-magazine">Số lượng tối đa</div>
                                    <div class="detail-value-magazine">@Model.MaxParticipants người</div>
                                </div>
                            }
                            @if (Model.CurrentParticipants.HasValue)
                            {
                                <div class="detail-item-magazine">
                                    <div class="detail-label-magazine">Đã đăng ký</div>
                                    <div class="detail-value-magazine">@Model.CurrentParticipants người</div>
                                </div>
                            }
                        </div>
                    </section>

                    <div class="mt-4 pt-4 border-top">
                        <a asp-controller="Events" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar-sticky-card">
                    <h3 class="sidebar-title-magazine"><i class="fa-solid fa-newspaper me-2" style="color: var(--primary-color);"></i> Sự kiện nổi bật khác</h3>

                    <div class="related-events-magazine">
                        @if (RelatedEvent != null && RelatedEvent.Any())
                        {
                            foreach (var ev in RelatedEvent)
                            {
                                <a href="@Url.Action("Details", "Events", new { slug = ev.Slug, id = ev.EventId })"
                                   class="related-event-item-magazine">
                                    <div class="related-image-magazine">
                                        <img src="~/main/img/events/@ev.Image" alt="@ev.Title">
                                    </div>
                                    <div class="related-info-magazine">
                                        <h4 class="related-title-magazine">@ev.Title</h4>
                                        <p class="related-date-magazine">
                                            <i class="fa-solid fa-calendar-alt me-1"></i>
                                            @ev.StartTime.ToString("dd/MM/yyyy")
                                        </p>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted fst-italic p-3">Không có sự kiện liên quan nào.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #0d6efd; /* Blue */
        --accent-color: #ffc107; /* Yellow Accent */
        --text-dark: #212529;
        --text-muted: #6c757d;
        --bg-light: #f8f9fa;
        --border-light: #dee2e6;
        --shadow-magazine: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    /* Reset & Base */
    body {
        background-color: var(--bg-light);
    }

    .event-detail-page-magazine .container {
        max-width: 1200px;
    }

    /* --- 1. Magazine Hero Card --- */
    .magazine-hero-card {
        background: white;
        border-radius: 12px;
        box-shadow: var(--shadow-magazine);
        overflow: hidden;
    }

    /* Image Side */
    .hero-image-content {
        position: relative;
        height: 380px; /* Chiều cao cố định cho ảnh */
    }

    .hero-image-magazine {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-text-overlay {
        position: absolute;
        inset: 0;
        padding: 30px;
        color: white;
        background: linear-gradient(90deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.2) 60%, rgba(0, 0, 0, 0) 100%);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .event-category-badge {
        display: inline-block;
        padding: 6px 15px;
        background-color: var(--accent-color);
        color: var(--text-dark);
        border-radius: 6px;
        font-weight: 700;
        font-size: 13px;
    }

    .hero-title-magazine {
        font-size: 2.2rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 10px;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
    }

    .hero-quick-meta span {
        font-size: 15px;
        margin-right: 15px;
        opacity: 0.9;
    }

    /* Action Side (Right) */
    .quick-details-list {
        padding-left: 0;
    }

        .quick-details-list li {
            border-bottom: 1px dashed #f0f0f0;
            padding: 10px 0;
            color: var(--text-muted);
            font-size: 15px;
        }

            .quick-details-list li i {
                color: var(--primary-color);
                width: 20px;
                margin-right: 5px;
            }

            .quick-details-list li strong {
                color: var(--text-dark);
                font-weight: 600;
            }

    .btn-primary-cta {
        background-color: var(--primary-color);
        color: white;
        padding: 12px 20px;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

        .btn-primary-cta:hover {
            background-color: #0b5ed7;
        }

    .btn-success-disabled {
        background-color: #198754;
        color: white;
        padding: 12px 20px;
        border-radius: 8px;
        opacity: 0.7;
        cursor: not-allowed;
    }

    /* --- 2. Main Content & Sidebar --- */
    .content-panel-card {
        padding: 20px 0;
    }

    .section-title-magazine {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 25px;
        padding-bottom: 5px;
        border-bottom: 3px solid var(--border-light);
    }

        .section-title-magazine i {
            color: var(--primary-color);
        }

    /* Full Details Grid */
    .details-grid-magazine {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px 30px;
    }

    .detail-item-magazine {
        border-left: 3px solid var(--primary-color);
        padding-left: 15px;
    }

    .detail-label-magazine {
        font-size: 14px;
        font-weight: 500;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value-magazine {
        font-size: 16px;
        font-weight: 600;
        color: var(--text-dark);
        margin-top: 5px;
    }

    /* Sidebar */
    .sidebar-sticky-card {
        background: white;
        border-radius: 12px;
        box-shadow: var(--shadow-magazine);
        padding: 25px;
        position: sticky;
        top: 20px;
    }

    .sidebar-title-magazine {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-light);
    }

    /* Related Events List */
    .related-events-magazine {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .related-event-item-magazine {
        display: flex;
        gap: 15px;
        text-decoration: none;
        padding: 10px;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

        .related-event-item-magazine:hover {
            background-color: var(--bg-light);
        }

    .related-image-magazine {
        flex-shrink: 0;
        width: 80px;
        height: 60px;
        border-radius: 6px;
        overflow: hidden;
    }

        .related-image-magazine img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .related-title-magazine {
        font-size: 15px;
        font-weight: 600;
        color: var(--text-dark);
        margin: 0;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .related-date-magazine {
        font-size: 13px;
        color: var(--text-muted);
        margin: 0;
    }

    /* Responsive adjustments */
    @@media (max-width: 991px) {
        .magazine-hero-card .col-lg-8,
        .magazine-hero-card .col-lg-4 {
            height: auto !important;
        }

        .hero-image-content {
            height: 250px;
        }

        .magazine-hero-card .row > div:nth-child(2) > div {
            padding: 25px !important;
            border-top: 1px solid var(--border-light);
        }

        .sidebar-sticky-card {
            position: static;
        }
    }

    @@media (max-width: 576px) {
        .hero-title-magazine {
            font-size: 1.8rem;
        }
    }
</style>