@model VinhuniEvent.Models.Event
@{
    ViewData["Title"] = Model.Title;
    List<VinhuniEvent.Models.Event> RelatedEvent = ViewBag.RelatedEvent;
}

<div class="event-detail-page">
    <!-- Hero Banner -->
    <div class="event-hero">
        <div class="hero-image-container">
            <img src="~/main/img/events/@Model.Image" alt="@Model.Title" class="hero-image">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <div class="event-badge mb-3">@Model.Category?.CategoryName</div>
                <h1 class="hero-title">@Model.Title</h1>
                <div class="hero-meta">
                    <div class="meta-item">
                        <i class="fa-solid fa-calendar-days"></i>
                        <span>@Model.StartTime.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="meta-item">
                        <i class="fa-solid fa-location-dot"></i>
                        <span>@Model.Location</span>
                    </div>
                    @if (Model.MaxParticipants.HasValue && Model.CurrentParticipants.HasValue)
                    {
                        <div class="meta-item">
                            <i class="fa-solid fa-users"></i>
                            <span>@Model.CurrentParticipants/@Model.MaxParticipants người</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container content-wrapper">
        <div class="row g-4">
            <!-- Left Column - Main Content -->
            <div class="col-lg-8">
                <div class="content-card">
                    <!-- Description Section -->
                    <section class="content-section">
                        <h2 class="section-title">Giới thiệu sự kiện</h2>
                        <div class="section-content">
                            <p style="white-space: pre-line; line-height: 1.8;">
                                @Html.Raw(Model.Description)
                            </p>
                        </div>
                    </section>

                    <!-- Event Details -->
                    <section class="content-section">
                        <h2 class="section-title">Thông tin chi tiết</h2>
                        <div class="details-grid">
                            <div class="detail-item">
                                <div class="detail-label">Thời gian bắt đầu</div>
                                <div class="detail-value">@Model.StartTime.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Thời gian kết thúc</div>
                                <div class="detail-value">@Model.EndTime.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Địa điểm</div>
                                <div class="detail-value">@Model.Location</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Trạng thái</div>
                                <div class="detail-value">
                                    <span class="status-badge">@Model.Status</span>
                                </div>
                            </div>
                            @if (Model.MaxParticipants.HasValue)
                            {
                                <div class="detail-item">
                                    <div class="detail-label">Số lượng tối đa</div>
                                    <div class="detail-value">@Model.MaxParticipants người</div>
                                </div>
                            }
                            @if (Model.CurrentParticipants.HasValue)
                            {
                                <div class="detail-item">
                                    <div class="detail-label">Đã đăng ký</div>
                                    <div class="detail-value">@Model.CurrentParticipants người</div>
                                </div>
                            }
                            <div class="detail-item">
                                <div class="detail-label">Người tạo</div>
                                <div class="detail-value">@Model.CreatedByNavigation?.FullName</div>
                            </div>
                            @if (Model.CreatedDate.HasValue)
                            {
                                <div class="detail-item">
                                    <div class="detail-label">Ngày tạo</div>
                                    <div class="detail-value">@Model.CreatedDate?.ToString("dd/MM/yyyy")</div>
                                </div>
                            }
                        </div>
                    </section>

                    <!-- Action Buttons -->
                    <div class="action-bar">
                        <a asp-controller="Events" asp-action="Index" class="btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i>
                            <span>Quay lại</span>
                        </a>
                        @if (ViewBag.IsRegistered == true)
                        {
                            <button class="btn btn-success btn-lg px-4" disabled>
                                <i class="fa-solid fa-check me-2"></i>
                                Đã Đăng Ký
                            </button>
                        }
                        else
                        {
                            <form asp-action="RegisterEvent" method="post" class="d-inline">
                                <input type="hidden" name="eventId" value="@Model.EventId" />
                                <button type="submit" class="btn btn-primary btn-lg px-4">
                                    <i class="fa-solid fa-ticket me-2"></i>
                                    Đăng ký tham gia
                                </button>
                            </form>
                        }

                    </div>
                </div>
            </div>

            <!-- Right Column - Related Events -->
            <div class="col-lg-4">
                <div class="sidebar-card">
                    <h3 class="sidebar-title">
                        <i class="fa-solid fa-fire"></i>
                        Sự kiện nổi bật
                    </h3>

                    <div class="related-events">
                        @if (RelatedEvent != null && RelatedEvent.Any())
                        {
                            foreach (var ev in RelatedEvent)
                            {
                                <a href="@Url.Action("Details", "Events", new { slug = ev.Slug, id = ev.EventId })"
                                   class="related-event-item">
                                    <div class="related-image">
                                        <img src="~/main/img/events/@ev.Image" alt="@ev.Title">
                                    </div>
                                    <div class="related-info">
                                        <h4 class="related-title">@ev.Title</h4>
                                        <p class="related-date">
                                            <i class="fa-solid fa-calendar"></i>
                                            @ev.StartTime.ToString("dd/MM/yyyy")
                                        </p>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="no-events">Không có sự kiện nổi bật</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #2563eb;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
        --bg-gray: #f8fafc;
        --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
        --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.08);
    }

    body {
        background-color: var(--bg-gray);
        color: var(--text-primary);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    /* Hero Section */
    .event-hero {
        position: relative;
        height: 450px;
        margin-bottom: -80px;
        overflow: hidden;
    }

    .hero-image-container {
        position: absolute;
        inset: 0;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.6) 100%);
    }

    .hero-content {
        position: relative;
        padding-top: 120px;
        color: white;
        max-width: 900px;
    }

    .event-badge {
        display: inline-block;
        padding: 6px 16px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
        letter-spacing: 0.3px;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin: 16px 0 24px;
        line-height: 1.2;
    }

    .hero-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        font-size: 15px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .meta-item i {
            font-size: 16px;
            opacity: 0.9;
        }

    /* Content Wrapper */
    .content-wrapper {
        position: relative;
        padding-top: 100px;
        padding-bottom: 60px;
    }

    /* Content Card */
    .content-card {
        background: white;
        border-radius: 16px;
        box-shadow: var(--shadow-md);
        overflow: hidden;
    }

    .content-section {
        padding: 40px;
        border-bottom: 1px solid var(--border-color);
    }

        .content-section:last-of-type {
            border-bottom: none;
        }

    .section-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 24px;
        color: var(--text-primary);
    }

    .section-content {
        color: var(--text-secondary);
        font-size: 16px;
    }

    /* Details Grid */
    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 24px;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .detail-label {
        font-size: 13px;
        font-weight: 500;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 500;
        color: var(--text-primary);
    }

    .status-badge {
        display: inline-block;
        padding: 4px 12px;
        background: #dbeafe;
        color: var(--primary-color);
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
    }

    /* Action Bar */
    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 32px 40px;
        gap: 16px;
    }

    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        border-radius: 10px;
        font-weight: 500;
        font-size: 15px;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background: #1d4ed8;
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

    .btn-secondary {
        background: white;
        color: var(--text-primary);
        border: 1px solid var(--border-color);
    }

        .btn-secondary:hover {
            background: var(--bg-gray);
            border-color: var(--text-secondary);
        }

    /* Sidebar */
    .sidebar-card {
        position: sticky;
        top: 20px;
        background: white;
        border-radius: 16px;
        box-shadow: var(--shadow-md);
        padding: 32px;
    }

    .sidebar-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--text-primary);
    }

        .sidebar-title i {
            color: #f59e0b;
        }

    /* Related Events */
    .related-events {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .related-event-item {
        display: flex;
        gap: 16px;
        padding: 16px;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 1px solid transparent;
    }

        .related-event-item:hover {
            background: var(--bg-gray);
            border-color: var(--border-color);
            transform: translateX(4px);
        }

    .related-image {
        flex-shrink: 0;
        width: 80px;
        height: 80px;
        border-radius: 10px;
        overflow: hidden;
    }

        .related-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .related-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 6px;
    }

    .related-title {
        font-size: 15px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .related-date {
        font-size: 13px;
        color: var(--text-secondary);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .no-events {
        text-align: center;
        color: var(--text-secondary);
        padding: 20px;
        margin: 0;
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .content-section {
            padding: 32px 24px;
        }

        .action-bar {
            padding: 24px;
            flex-direction: column;
        }

        .btn-primary,
        .btn-secondary {
            width: 100%;
            justify-content: center;
        }

        .sidebar-card {
            position: static;
        }
    }

    @@media (max-width: 768px) {
        .event-hero {
            height: 350px;
            margin-bottom: -60px;
        }

        .hero-content {
            padding-top: 80px;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-meta {
            font-size: 14px;
            gap: 16px;
        }

        .content-wrapper {
            padding-top: 80px;
        }

        .details-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
    }
</style>